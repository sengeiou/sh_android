<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_90"
      android:visibility="gone"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingRight="16dp"
      android:paddingLeft="16dp"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="horizontal"
        android:layout_marginRight="4dp"
        android:gravity="center_vertical"
        >

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/stream_picture"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginRight="12dp"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:src="@drawable/ic_contact_picture_default"
          android:visibility="gone"
          tools:visibility="visible"
          />

      <ImageView
          android:id="@+id/stream_picture_without_image"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginRight="12dp"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:src="@drawable/ic_contact_picture_default"
          android:visibility="gone"
          tools:visibility="gone"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_vertical"
          >
        <TextView
            android:id="@+id/stream_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titulo de un stream"
            android:textColor="@color/gray_60"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAllCaps="true"
            android:scrollHorizontally="true"
            />

        <TextView
            android:id="@+id/stream_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titulo de un stream gua"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:visibility="gone"
            tools:visibility="gone"
            />


      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/favorite_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >

      <com.sackcentury.shinebuttonlib.ShineButton
          android:id="@+id/favorite_discover_indicator"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:scaleType="centerCrop"
          android:visibility="gone"
          app:allow_random_color="false"
          app:big_shine_color="@color/primary_dark"
          app:btn_color="#d9d9d9"
          app:btn_fill_color="@color/primary"
          app:click_animation_duration="200"
          app:enable_flashing="false"
          app:shine_animation_duration="1500"
          app:shine_count="8"
          app:shine_turn_angle="10"
          app:siShape="@drawable/ic_favorite_not_added_28_gray50"
          app:small_shine_color="@color/accent"
          app:small_shine_offset_angle="20"
          />

      <TextView
          android:id="@+id/stream_add_fav"
          android:layout_width="wrap_content"
          android:layout_height="36dp"
          android:layout_marginLeft="8dp"
          android:gravity="center"
          android:text="ADD TO FAVORITE"
          android:textColor="@color/primary"
          android:textSize="14sp"
          android:textStyle="bold"
          android:visibility="gone"
          />

      <TextView
          android:id="@+id/stream_faved"
          android:layout_width="wrap_content"
          android:layout_height="36dp"
          android:layout_marginLeft="8dp"
          android:gravity="center"
          android:text="FAVORITE"
          android:textColor="@color/gray_60"
          android:textSize="14sp"
          android:textStyle="bold"
          />

    </LinearLayout>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_90"
      android:visibility="gone"
      />
</LinearLayout>