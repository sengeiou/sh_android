<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight=".9"
      android:descendantFocusability="blocksDescendants"
      android:paddingBottom="12dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="12dp"
      >

    <com.shootr.mobile.ui.widgets.AvatarView
        android:id="@+id/shot_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_contact_picture_default"
        />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shot_avatar"
        android:layout_toStartOf="@+id/action_container"
        android:orientation="vertical"
        >
      <RelativeLayout
          android:id="@+id/shot_name_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/shot_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxWidth="176dp"
            android:singleLine="true"
            android:textColor="@color/gray_10"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Ignasi "
            />
        <FrameLayout
            android:id="@+id/verified_user_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/shot_user_name"
            >
          <ImageView
              android:id="@+id/verified_user"
              android:layout_width="10dp"
              android:layout_height="10dp"
              android:layout_marginLeft="2dp"
              android:src="@drawable/ic_action_verified_shot"
              android:visibility="gone"
              tools:visibility="visible"
              />
          <ImageView
              android:id="@+id/holder_or_contributor_user"
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:layout_gravity="bottom"
              android:layout_marginLeft="1dp"
              android:layout_marginTop="2dp"
              android:src="@drawable/ic_stars"
              android:visibility="gone"
              tools:visibility="visible"
              />
        </FrameLayout>
        <TextView
            android:id="@+id/shot_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/verified_user_container"
            android:maxLines="1"
            android:textColor="@color/gray_80"
            android:textSize="14sp"
            tools:text="22m"
            />


      </RelativeLayout>

      <com.shootr.mobile.ui.widgets.BaseMessageTextView
          android:id="@+id/shot_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"


          android:textColor="@color/material_black"
          android:textColorLink="@color/links"
          android:textSize="14sp"
          tools:text="Who's the referee? vfdvsdfvgdngjbn mgjknjn gmkfg"
          tools:visibility="visible"

          />
      <FrameLayout
          android:id="@+id/shot_media_content"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="24dp"
          android:layout_marginTop="4dp"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:visibility="gone"
          tools:visibility="visible"
          >

        <com.shootr.mobile.ui.widgets.ProportionalImageView
            android:id="@+id/shot_image_landscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:transitionName="shared_image"
            android:visibility="gone"
            app:riv_corner_radius="10dp"
            tools:src="@drawable/sample_avatar"
            tools:visibility="gone"
            />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/default_image"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:riv_corner_radius="5dp"
            tools:visibility="visible"
            />

        <FrameLayout
            android:id="@+id/shot_video_frame"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_gravity="left|bottom"
            android:background="@drawable/round_corner"
            android:foreground="?selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            >

          <TextView
              android:id="@+id/shot_video_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:textColor="@color/white"
              tools:text="Titulo del video"
              />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:scaleType="center"
              android:src="@drawable/ic_video_play_circle_48_white"
              />

          <TextView
              android:id="@+id/shot_video_duration"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right|bottom"
              android:layout_margin="8dp"
              android:textColor="@color/white"
              tools:text="0:00"
              />
        </FrameLayout>
      </FrameLayout>
      <TextView
          android:id="@+id/shot_reply_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/gray_80"
          android:textSize="14sp"
          android:visibility="gone"
          tools:text="8 responses"
          tools:visibility="visible"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

      <LinearLayout
          android:id="@+id/reshoot_action"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingRight="16dp"
          android:background="?selectableItemBackground"
          >
        <ImageView
            android:id="@+id/reshoot_icon"
            android:layout_width="20sp"
            android:layout_height="20dp"
            android:src="@drawable/ic_av_repeat"
            />
      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="46dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/shot_nice_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="4dp"
          android:layout_marginTop="2dp"
          android:gravity="center"
          android:textColor="@color/gray_80"
          android:textSize="12sp"
          tools:text="2"
          />
      <com.sackcentury.shinebuttonlib.ShineButton
          android:id="@+id/shot_nice_button"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:scaleType="centerCrop"
          android:visibility="visible"
          app:allow_random_color="false"
          app:big_shine_color="@color/primary_dark"
          app:btn_color="@color/gray_92"
          app:btn_fill_color="@color/primary"
          app:click_animation_duration="200"
          app:enable_flashing="false"
          app:shine_animation_duration="1500"
          app:shine_count="8"
          app:shine_turn_angle="10"
          app:siShape="@drawable/ic_action_favorite_gray"
          app:small_shine_color="@color/accent"
          app:small_shine_offset_angle="20"
          />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/open_menu_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBaseline="@+id/linearLayout2"
        android:layout_marginTop="24dp"
        >
      <LinearLayout
          android:id="@+id/open_menu"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center|end"
          android:visibility="gone"
          tools:visibility="visible"
          >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_more_vert"
            />
      </LinearLayout>
    </FrameLayout>
  </RelativeLayout>
</LinearLayout>