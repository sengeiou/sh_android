     title="@string/drawer_streams_title"
     activeColor="@color/material_black"
      inActiveColor="@color/inactive_tabs"
     barColorWhenSelected="@color/primary"/>

  <tab
      id="@+id/bottombar_activity"
      icon="@drawable/drawable_activity"
