<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="None"></style>

  <!-- Base application themes. -->
  <style name="ShootrTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>

    <item name="colorButtonNormal">?colorPrimary</item>
    <item name="android:textAppearanceButton">@style/ButtonText</item>

    <item name="android:windowContentOverlay">@null</item>
    <item name="android:textColorLink">@color/links</item>
    <item name="android:textCursorDrawable">@null</item>

    <item name="searchViewStyle">@style/MySearchViewStyle</item>
    <item name="colorSwitchThumbNormal">@color/switch_disabled</item>
    <item name="toolbar">@style/ToolBar</item>

    <item name="bottomSheetStyle">@style/BottomSheetMaterial</item>
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="ShootrTheme.Closable">
    <item name="toolbar">@style/ToolBar.Closable</item>
    <item name="colorPrimaryDark">#b3b3b3</item>
    <item name="searchViewStyle">@style/MySearchViewStyle.Closable</item>
    <item name="android:actionBarWidgetTheme">@style/MySearchViewStyle.Closable</item>
  </style>

  <style name="ShootrTheme.WelcomePage">
    <item name="colorPrimary">@color/white</item>
  </style>

  <style name="ShootrTheme.DarkToolbar">
    <item name="colorPrimary">@color/gray_50</item>
    <item name="colorPrimaryDark">@color/gray_40</item>
  </style>

  <style name="ShootrTheme.TranslucentToolbar">
    <item name="toolbar">@style/ToolBar.Translucent</item>
  </style>

  <style name="ShootrTheme.PhotoViewer">
    <item name="android:windowBackground">@color/black</item>
    <item name="colorPrimaryDark">@color/black</item>
    <item name="toolbar">@style/ToolBar.Overlay</item>
  </style>

  <style name="ShootrTheme.ShotDetail">
    <item name="android:windowBackground">@color/gray_92</item>
  </style>

  <style name="ToolBar">
    <item name="android:background">?colorPrimary</item>
    <item name="theme">@style/ActionBarThemeOverlay</item>
    <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    <item name="titleTextAppearance">@style/ActionBar.TitleText</item>
  </style>

  <style name="ToolBar.Closable">
    <item name="android:background">@color/white</item>
    <item name="theme">@style/ActionBarThemeOverlay.Closable</item>
    <item name="titleTextAppearance">@style/ActionBar.TitleText.Closable</item>
  </style>

  <style name="ToolBar.Translucent">
    <item name="android:background">@color/transparent</item>
  </style>

  <style name="ShootrTabLayout" parent="Base.Widget.Design.TabLayout">
    <item name="android:background">?attr/colorPrimary</item>
    <item name="tabIndicatorColor">#464749</item>
    <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
    <item name="tabBackground">?attr/selectableItemBackground</item>
    <item name="tabSelectedTextColor">#464749</item>
    <item name="android:textColor">#464749</item>
  </style>

  <style name="ShootrSearchTabLayout" parent="Base.Widget.Design.TabLayout">
    <item name="android:background">@color/white</item>
    <item name="tabIndicatorColor">@color/material_black</item>
    <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
    <item name="tabBackground">?attr/selectableItemBackground</item>
    <item name="tabTextAppearance">@style/TabSearchTextAppearance</item>
    <item name="tabSelectedTextColor">@color/material_black</item>
  </style>

  <style name="TabSearchTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textColor">@color/gray_70</item>
  </style>

  <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textColor">@color/white_disabled</item>
  </style>

  <style name="ToolBar.Overlay">
    <item name="android:background">@drawable/toolbar_overlay_background</item>
  </style>

  <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

    <item name="android:textSize">18sp</item>
  </style>

  <style name="ActionBar.SubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/primary_disabled</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="ActionBar.TitleText.Closable">
    <item name="android:textColor">@color/toolbar_closable</item>
  </style>

  <style name="ActionBarThemeOverlay" parent="">
    <item name="android:textColorPrimary">#fff</item>
    <item name="colorControlNormal">@color/icons</item>
    <item name="colorControlHighlight">#3fff</item>
  </style>

  <style name="ActionBarThemeOverlay.Closable">
    <item name="android:textColorPrimary">@color/toolbar_closable</item>
    <item name="colorControlNormal">@color/toolbar_closable</item>
    <item name="colorControlHighlight">#3000</item>
  </style>

  <style name="ButtonText" parent="TextAppearance.AppCompat.Button">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="MySearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
    <item name="queryBackground">@color/primary</item>
    <item name="android:textColorHint">@color/accent</item>

    <!--<item name="searchIcon"></item>-->
    <!--<item name="goIcon"></item>-->
    <!--<item name="voiceIcon"></item>-->
    <!--<item name="commitIcon"></item>-->
    <!--<item name="android:suggestionRowLayout"></item>-->
  </style>

  <style name="MySearchViewStyle.Closable">
    <item name="queryBackground">@color/white</item>
    <item name="android:textColorHint">@color/accent</item>
  </style>

  <style name="ShootrTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowTitleSize">0dp</item>
  </style>

  <style name="ShootrTheme.NoActionBar.Floating">
    <item name="android:windowIsTranslucent">true</item>
    <!--<item name="android:windowIsFloating">true</item>-->
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowBackground">@color/transparent</item>
  </style>

  <!-- Styles -->
  <style name="TextAppearance.FloatLabel" parent="android:TextAppearance.Small">
    <item name="android:textColor">@color/gray_60</item>
    <item name="android:textSize">13sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- UI widgets -->
  <style name="LoginFacebookButton">
    <item name="android:background">@drawable/facebook_btn_color</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textStyle">normal</item>
    <item name="android:drawableLeft">@drawable/com_facebook_button_icon</item>

  </style>

  <style name="WelcomePageButton">
    <item name="android:textColor">@color/primary</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:minWidth">64dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="LoginEmailButton">
    <item name="android:background">@drawable/background_email_login_button</item>
    <item name="android:clickable">true</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:alpha">0.8</item>
  </style>

  <style name="LoginSessionButton">
    <item name="android:background">@color/transparent</item>x
    <item name="android:textColor">@color/white_bar</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">15sp</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="WelcomeButton">
    <item name="android:background">@color/transparent</item>x
    <item name="android:textColor">@color/primary</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">15sp</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="ProfileMarkTitle">
    <item name="android:textColor">@color/gray_60</item>
  </style>

  <style name="ProfileMarkValue">
    <item name="android:textColor">@color/primary</item>
  </style>

  <!-- Follow button -->
  <style name="FollowButton">
    <item name="android:background">@drawable/btn_follow</item>
  </style>

  <style name="FollowButtonText">
    <item name="android:textColor">@color/primary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:drawablePadding">4dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:text">@string/profile_follow</item>
  </style>

  <style name="FollowButtonText.Follow">
    <item name="android:text">@string/profile_following</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/follow_button</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="FollowButton.Checked">
    <item name="android:background">@drawable/btn_following</item>
  </style>

  <style name="FollowButtonText.Checked">
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">normal</item>
    <item name="android:drawablePadding">4dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:text">@string/profile_follow</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!--Follows button-->
  <style name="FollowingButton">
    <item name="android:background">@drawable/btn_follow</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/follow_button</item>
    <item name="android:textStyle">normal</item>
  </style>

  <!-- EditProfile Button -->
  <style name="FollowButton.Edit">
    <item name="android:background">@drawable/btn_follow</item>
  </style>

  <style name="FollowButtonText.Edit">
    <item name="android:text">@string/profile_edit_profile</item>
  </style>

  <!-- Add Contributor -->
  <style name="FollowButton.Add">
    <item name="android:drawableLeft">@drawable/ic_person_add</item>
    <item name="android:background">@drawable/btn_follow</item>
  </style>

  <style name="FollowButtonText.Add">
    <item name="android:drawableLeft">@drawable/ic_person_add</item>
    <item name="android:text">@string/add_contributor</item>
  </style>

  <!-- Added Contributor -->
  <style name="FollowButton.Added">
    <item name="android:background">@drawable/btn_following</item>
  </style>

  <style name="FollowButtonText.Added">
    <item name="android:textColor">@color/white</item>
    <item name="android:drawableLeft">@drawable/ic_check</item>
    <item name="android:text">@string/added_contributor</item>
  </style>

  <!-- Menú drawer -->

  <style name="MenuDrawer"/>

  <style name="MenuDrawer.Widget"/>

  <style name="MenuDrawer.Widget.Title">
    <item name="android:textAppearance">?android:attr/textAppearance</item>
    <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:paddingRight">32dp</item>
    <item name="android:drawablePadding">16dp</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="TextAppearance.Switch" parent="TextAppearance.AppCompat.Medium"></style>

  <!-- Used to color the switch bar controls -->
  <style name="ThemeOverlay.SwitchBar" parent="@style/ThemeOverlay.AppCompat">
    <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="TextAppearance.BottomSheet.Persistent.Row" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="BottomSheetMaterial" parent="BottomSheet.Dialog">
    <item name="bs_titleTextAppearance">@style/BottomSheetMaterial.Title</item>
    <item name="bs_listItemTitleTextAppearance">@style/BottomSheetMaterial.Item</item>
  </style>

  <style name="BottomSheetMaterial.Title">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">#ff757575</item>
  </style>

  <style name="BottomSheetMaterial.Item">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">#ff212121</item>
  </style>

  <style name="BorderlessButton">
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:gravity">center</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:minWidth">64dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="BorderlessButton.Primary">
    <item name="android:textColor">@color/primary_selector</item>
  </style>

  <style name="BorderlessButton.Secondary">
    <item name="android:textColor">@color/gray_50</item>
  </style>

  <style name="ErrorSubtitle">
    <item name="android:textColor">@color/error</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="HearthButton">
    <item name="android:src">@drawable/ic_checkable</item>
  </style>

  <style name="HideButton">
    <item name="android:scaleType">center</item>
    <item name="android:src">@drawable/ic_action_close_gray60_24_nopadding</item>
  </style>

  <style name="ListSectionTitleAppearance">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/gray_45</item>
    <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
  </style>

  <style name="ListSeparatorTitleAppearance">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/gray_45</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="InlineDescriptionAppearance" parent="TextAppearance.AppCompat">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/gray_65</item>
  </style>

  <style name="InlineConnectedAppearance" parent="InlineDescriptionAppearance">
    <item name="android:textColor">@color/primary</item>
  </style>

  <style name="ShootrTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="ShootrTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="growAnimation">
    <item name="@android:windowEnterAnimation">@anim/grow_out</item>
    <item name="@android:windowExitAnimation">@anim/grow_in</item>
  </style>

  <style name="dialog_animation">
    <item name="android:windowEnterAnimation">@anim/shot_image_animation_in</item>
  </style>

  <style name="ShootrAnimation" parent="ShootrTheme">

  </style>

  <style name="TimelineIndicator">
    <item name="android:background">@color/poll_results</item>
  </style>

  <style name="NewShotBar">
    <item name="android:background">@color/white</item>
  </style>

  <style name="ExpandedAppBar" parent="ActionBar.TitleText">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="IncludeShotDetail">
    <item name="android:background">@color/white</item>
  </style>

  <style name="ViewOnlyTimelineBar">
    <item name="android:background">@color/white_bar</item>
  </style>

  <style name="StreamDetailBackground">
    <item name="android:background">@color/gray_80</item>
  </style>

  <style name="OverlayTheme" parent="ShootrTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@color/translucent_background</item>
    <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
  </style>
</resources>
