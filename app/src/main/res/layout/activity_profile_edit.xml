<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#d9d9d9" />

        <com.shootr.android.ui.widgets.FloatLabelLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginTop="16dp"
          app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

            <EditText
              android:id="@+id/edit_profile_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/activity_edit_profile_name_hint"
              android:imeOptions="actionNext"
              android:inputType="textNoSuggestions"
              android:lines="1"
              android:singleLine="true"
              android:nextFocusDown="@+id/edit_profile_username" />

        </com.shootr.android.ui.widgets.FloatLabelLayout>

        <com.shootr.android.ui.widgets.FloatLabelLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginTop="16dp"
          app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

            <EditText
              android:id="@+id/edit_profile_username"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/activity_edit_profile_username_hint"
              android:imeOptions="actionNext"
              android:inputType="textNoSuggestions"
              android:lines="1"
              android:singleLine="true"
              android:nextFocusDown="@+id/edit_profile_team" />

        </com.shootr.android.ui.widgets.FloatLabelLayout>

        <com.shootr.android.ui.widgets.FloatLabelLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginTop="16dp"
          app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

            <EditText
              android:id="@+id/edit_profile_team"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/activity_edit_profile_team_hint"
              android:imeOptions="actionNext"
              android:inputType="textNoSuggestions"
              android:lines="1"
              android:singleLine="true"
              android:nextFocusDown="@+id/edit_profile_website" />

        </com.shootr.android.ui.widgets.FloatLabelLayout>

        <com.shootr.android.ui.widgets.FloatLabelLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginTop="16dp"
          app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

            <EditText
              android:id="@+id/edit_profile_website"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/activity_edit_profile_website_hint"
              android:imeOptions="actionNext"
              android:inputType="textNoSuggestions|textUri"
              android:lines="1"
              android:singleLine="true"
              android:nextFocusDown="@+id/edit_profile_bio" />

        </com.shootr.android.ui.widgets.FloatLabelLayout>

        <com.shootr.android.ui.widgets.FloatLabelLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_marginTop="16dp"
          app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

            <EditText
              android:id="@+id/edit_profile_bio"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/activity_edit_profile_bio_hint"
              android:imeOptions="actionDone"
              android:maxLines="3"
              />

        </com.shootr.android.ui.widgets.FloatLabelLayout>

    </LinearLayout>
</ScrollView>