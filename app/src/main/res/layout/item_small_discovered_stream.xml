<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="0.15dp"
    >

    <com.yayandroid.parallaxrecyclerview.ParallaxImageView
        android:id="@+id/stream_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/sample_avatar"
        />

  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#50263238"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <TextView
        android:id="@+id/stream_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Buenos dÃ­as"
        />

    <TextView
        android:id="@+id/stream_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/favorite_discovered_indicator"
        android:layout_toLeftOf="@+id/favorite_discovered_indicator"
        android:layout_toStartOf="@+id/favorite_discovered_indicator"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="En este stream se hace lo que yo diga"
        />

    <com.sackcentury.shinebuttonlib.ShineButton
        android:id="@+id/favorite_discovered_indicator"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="right|bottom"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:allow_random_color="false"
        app:big_shine_color="@color/primary_dark"
        app:btn_color="#d9d9d9"
        app:btn_fill_color="@color/primary"
        app:click_animation_duration="200"
        app:enable_flashing="false"
        app:shine_animation_duration="1500"
        app:shine_count="8"
        app:shine_turn_angle="10"
        app:siShape="@drawable/ic_favorite_not_added_28_gray50"
        app:small_shine_color="@color/accent"
        app:small_shine_offset_angle="20"
        />
  </RelativeLayout>
</FrameLayout>