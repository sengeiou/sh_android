<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:paddingBottom="16dp"
  tools:showIn="@layout/fragment_profile">

    <FrameLayout
      android:id="@+id/profile_avatar_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >

        <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/profile_avatar"
          android:layout_width="@dimen/profile_avatar_size"
          android:layout_height="@dimen/profile_avatar_size"
          android:layout_margin="16dp"
          android:src="@drawable/ic_contact_picture_default" />

        <ProgressBar
          android:id="@+id/profile_avatar_loading"
          android:layout_width="wrap_content"
          android:layout_gravity="center"
          android:indeterminate="true"
          android:visibility="gone"
          tools:visibility="gone"
          android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
      android:id="@+id/profile_scores_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginRight="16dp"
      android:layout_below="@+id/profile_bio"
      android:orientation="horizontal">

            <TextView
              android:id="@+id/profile_marks_following"
              style="@style/ProfileMarkValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingRight="4dp"
              android:paddingLeft="8dp"
              android:background="?android:selectableItemBackground"
              android:clickable="true"
              android:text="-"
              tools:text="749" />

            <TextView
              style="@style/ProfileMarkTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="@string/profile_marks_following" />

            <TextView
              style="@style/ProfileMarkTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="8dp"
              android:gravity="center"
              android:text="|" />

            <TextView
              android:id="@+id/profile_marks_followers"
              style="@style/ProfileMarkValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="8dp"
              android:paddingRight="4dp"
              android:background="?android:selectableItemBackground"
              android:clickable="true"
              android:text="-"
              tools:text="23" />

            <TextView
              style="@style/ProfileMarkTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="@string/profile_marks_followers" />
    </LinearLayout>

    <!-- Follow buttons -->
    <com.shootr.android.ui.widgets.FollowButton
      android:id="@+id/profile_follow_button"
      android:layout_width="match_parent"
      android:layout_marginRight="16dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/profile_website"
      android:layout_marginTop="16dp"
      android:layout_alignLeft="@+id/profile_name"
      android:clickable="true" />

    <TextView
      android:id="@+id/profile_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/profile_avatar_container"
      android:layout_marginTop="16dp"
      android:textSize="21sp"
      android:maxLines="1"
      android:ellipsize="end"
      android:textStyle="bold"
      android:textColor="@color/material_black"
      tools:text="Ignasi de BorbÃ³n y todos los Santos" />

    <TextView
      android:id="@+id/profile_team"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/profile_name"
      android:layout_alignLeft="@+id/profile_name"
      android:maxLines="1"
      android:ellipsize="end"
      android:textColor="@color/gray_40"
      tools:text="Sevilla FC" />

    <TextView
      android:id="@+id/profile_bio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/profile_avatar_container"
      android:layout_marginRight="16dp"
      android:layout_marginLeft="16dp"
      android:textColor="@color/gray_40"
      tools:text="Supporter fince birth. Almost. Member since... whatever. I live in Tokio, Japan. Not really." />

    <TextView
      android:id="@+id/profile_website"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/profile_name"
      android:layout_below="@+id/profile_team"
      android:background="?android:selectableItemBackground"
      android:clickable="true"
      android:maxLines="1"
      android:ellipsize="end"
      android:textColor="@color/links"
      tools:text="sevibus.sloydev.com" />

</RelativeLayout>