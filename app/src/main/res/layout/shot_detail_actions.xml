<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    >

  <LinearLayout android:id="@+id/reshoot_container"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:background="?selectableItemBackground"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="visible">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_av_repeat" />

    <TextView android:id="@+id/reshoot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/gray_40"
        android:text="@string/menu_share_shot_via_shootr"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.BottomSheet.Persistent.Row" />

  </LinearLayout>

  <LinearLayout android:id="@+id/external_share_container"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:background="?selectableItemBackground"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="visible">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="visible"
        android:src="@drawable/ic_social_share"
        android:id="@+id/imageView2"
        />

    <TextView android:id="@+id/external_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/gray_40"
        android:textSize="14sp"
        android:text="@string/menu_share_shot_via"
        android:textAppearance="@style/TextAppearance.BottomSheet.Persistent.Row" />

  </LinearLayout>

  <LinearLayout android:id="@+id/shot_detail_pin_to_profile_container"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="match_parent"
      android:background="?selectableItemBackground"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      tools:visibility="visible">

    <ImageView android:id="@+id/shot_detail_pint_to_profile_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_pin_grey600_36dp" />

    <TextView android:id="@+id/shot_detail_pint_to_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textSize="14sp"
        android:textColor="@color/gray_40"
        android:text="@string/menu_pin_shot"
        android:textAppearance="@style/TextAppearance.BottomSheet.Persistent.Row" />

  </LinearLayout>


</LinearLayout>