<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:clickable="true"
  android:foreground="?selectableItemBackground"
>
  <View android:id="@+id/separator"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="84dp"
    android:layout_gravity="top"
    android:background="@color/separator" />

  <RelativeLayout android:layout_width="match_parent"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/stream_picture"
      android:layout_width="@dimen/stream_result_picture_width"
      android:layout_height="@dimen/stream_result_picture_height"
      android:src="@drawable/ic_stream_picture_default"
      android:layout_marginRight="16dp"
      tools:background="#660000cc"
      android:scaleType="centerCrop"
   />

    <LinearLayout android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_toLeftOf="@+id/stream_watchers"
      android:layout_toRightOf="@+id/stream_picture"
      android:orientation="vertical">

      <TextView android:id="@+id/stream_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:text="Titulo Dos lÃ­neas" />

      <TextView android:id="@+id/stream_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_45"
        android:textSize="15sp"
        tools:text="Romanesco" />
    </LinearLayout>

    <TextView android:id="@+id/stream_watchers"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginLeft="6dp"
      tools:text="2"
      style="@style/WatchersIndicator" />

    <ImageView android:id="@+id/stream_remove"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:background="?selectableItemBackground"
      android:src="@drawable/ic_action_navigation_close"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_alignLeft="@+id/stream_watchers"
      android:layout_alignStart="@+id/stream_watchers"
      android:visibility="gone"
      tools:visibility="visible"/>

    <ImageView android:id="@+id/favorite_stream_indicator"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:background="?selectableItemBackgroundBorderless"
      android:src="@drawable/ic_favorite_not_added_28_gray50"
      android:scaleType="centerCrop"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:visibility="gone"
      tools:visibility="visible"
      />
  </RelativeLayout>
</FrameLayout>
