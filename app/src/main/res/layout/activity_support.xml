<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.shootr.android.ui.activities.SupportActivity">

  <FrameLayout android:id="@+id/profile_faq_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
      android:id="@+id/support_faq_text"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginLeft="16dp"
      android:gravity="center_vertical"
      android:textAppearance="@style/TextAppearance.Switch"
      android:textColor="@color/gray_60"
      android:text="@string/support_faq"
      />

  </FrameLayout>

  <View android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@color/separator" />

  <FrameLayout android:id="@+id/support_privacy_policy_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground" >

    <TextView
      android:id="@+id/privacy_policy_text"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginLeft="16dp"
      android:gravity="center_vertical"
      android:textAppearance="@style/TextAppearance.Switch"
      android:textColor="@color/gray_30"
      android:text="@string/support_privacy_policy"
      />

  </FrameLayout>

  <View android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@color/separator" />

  <FrameLayout android:id="@+id/support_terms_service_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground" >

    <TextView
      android:id="@+id/support_terms_service_text"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginLeft="16dp"
      android:gravity="center_vertical"
      android:textAppearance="@style/TextAppearance.Switch"
      android:textColor="@color/gray_30"
      android:text="@string/support_terms_service"
      />

  </FrameLayout>

  <View android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@color/separator" />

  <FrameLayout android:id="@+id/support_version_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView android:id="@+id/support_version_number"
      android:layout_width="wrap_content"
      android:layout_height="56dp"
      android:gravity="center_vertical"
      android:paddingRight="16dp"
      android:layout_gravity="end|center_vertical"
      android:textAppearance="@style/TextAppearance.Switch"
      android:text="@string/profile_listing_number"
      android:textColor="@color/gray_60"
      android:visibility="gone"
      tools:visibility="visible"
      tools:text="0.47 - 6" />

    <TextView
      android:id="@+id/support_text"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginLeft="16dp"
      android:gravity="center_vertical"
      android:textAppearance="@style/TextAppearance.Switch"
      android:textColor="@color/gray_30"
      android:text="@string/support_version"
      />

  </FrameLayout>

  <View android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@color/separator" />

</LinearLayout>
