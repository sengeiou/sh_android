<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shootr.mobile.ui.activities.PollVoteActivity"
    tools:showIn="@layout/activity_poll_vote"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center"
      >

    <LinearLayout
        android:id="@+id/poll_votes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        tools:visibility= "visible"
        >
      <ImageView
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:src="@drawable/ic_device_access_time"
          />

      <TextView
          android:id="@+id/poll_votes"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:textColor="@color/material_black"
          android:paddingLeft="24dp"
          tools:text = "25455 votes"
          />
    </LinearLayout>

    <ProgressBar android:id="@+id/pollvote_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true" />
    <GridView
        android:id="@+id/poll_option_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="72dp"
        android:numColumns="4"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="8dp"
        />
  </LinearLayout>
</RelativeLayout>
