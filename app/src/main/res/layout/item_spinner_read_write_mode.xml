<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="16dp"
      >
    <ImageView
        android:id="@+id/spinner_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shot_gallery"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        >

      <TextView
          android:id="@+id/stream_read_write_mode"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:textSize="16sp"
          tools:text="View only"
          />

      <TextView
          android:id="@+id/stream_read_write_mode_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          tools:text="Only contributors and holder can write"
          />

    </LinearLayout>
  </LinearLayout>
</LinearLayout>