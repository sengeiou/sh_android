<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <View android:layout_width="match_parent"
    android:layout_below="@+id/profile_support_container"
    android:layout_height="0.5dp"
    android:background="@color/separator" />

  <FrameLayout android:id="@+id/profile_support_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground" >

    <TextView android:id="@+id/support_version_number"
      android:layout_width="wrap_content"
      android:layout_height="56dp"
      android:gravity="center_vertical"
      android:paddingRight="16dp"
      android:layout_gravity="end|center_vertical"
      android:textAppearance="@style/TextAppearance.Switch"
      android:text="@string/profile_listing_number"
      android:textColor="@color/gray_60"
      android:visibility="gone"
      tools:visibility="visible"
      tools:text="0.47 - 6" />

    <TextView
      android:id="@+id/support_text"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginLeft="16dp"
      android:gravity="center_vertical"
      android:textAppearance="@style/TextAppearance.Switch"
      android:textColor="@color/gray_30"
      tools:text="Terms of Service"
      />

  </FrameLayout>

</RelativeLayout>