<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/floating_rounded_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/new_shot_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:src="@drawable/sample_avatar"
                />

            <TextView
                android:id="@+id/new_shot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/new_shot_subtitle"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/new_shot_avatar"
                tools:text="Rafa"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/new_shot_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/new_shot_avatar"
                android:layout_toRightOf="@+id/new_shot_avatar"
                tools:text="\@rafa"
                android:textColor="@color/gray_70"
                />

            <TextView
                android:id="@+id/new_shot_char_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/new_shot_title"
                android:gravity="center"
                android:layout_marginRight="16dp"
                tools:text="140"
                android:textColor="@color/gray_70"
                />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/new_shot_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-light"
                android:gravity="top"
                android:hint="@string/activity_timeline_new_text"
                android:padding="16dp"
                />
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/floating_rounded_background_bottom"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/new_shot_send_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_send"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/new_shoot_action"
                android:textColor="@color/primary"
                android:textSize="16sp"
                />


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
