<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/in_app_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/av_bitmap_background_color"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    >

  <com.shootr.mobile.ui.widgets.AvatarView
      android:id="@+id/image"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:layout_marginLeft="16dp"
      android:layout_gravity="center"
      app:av_border_width = "0dp"
      app:av_border_color = "@color/icons"
      />
  
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="16dp"
      android:layout_gravity="center"
      >
    
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        tools:text="Juan Sin Miedo"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/primary_disabled"
        android:fontFamily="sans-serif"
        tools:text="Te ha respondido"
        />
  </LinearLayout>

</LinearLayout>