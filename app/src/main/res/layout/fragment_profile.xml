<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/profile_avatar"
      android:layout_width="@dimen/profile_avatar_size"
      android:layout_height="@dimen/profile_avatar_size"
      android:src="@drawable/ic_contact_picture_default" />

    <LinearLayout
      android:id="@+id/profile_scores_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_toRightOf="@+id/profile_avatar"
      android:gravity="top"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/profile_marks_points"
          style="@style/ProfileMarkValue"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:text="-"
          tools:text="3201" />

        <TextView
          style="@style/ProfileMarkTitle"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@string/profile_marks_points" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/profile_marks_following_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
          android:id="@+id/profile_marks_following_text"
          style="@style/ProfileMarkValue"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:text="-"
          tools:text="44" />

        <TextView
          style="@style/ProfileMarkTitle"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@string/profile_marks_following" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/profile_marks_followers_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/profile_marks_followers"
          style="@style/ProfileMarkValue"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:text="-"
          tools:text="23" />

        <TextView
          style="@style/ProfileMarkTitle"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@string/profile_marks_followers" />
      </LinearLayout>

    </LinearLayout>

    <!-- Follow buttons -->
    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/profile_avatar"
      android:layout_below="@+id/profile_scores_bar"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="8dp"
      android:layout_toRightOf="@+id/profile_avatar">

      <FrameLayout
        android:id="@+id/profile_following_button"
        style="@style/ProfileFollowButton.Checked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
          style="@style/ProfileFollowButtonText.Checked"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center" />
      </FrameLayout>

      <FrameLayout
        android:id="@+id/profile_follow_button"
        style="@style/ProfileFollowButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
          style="@style/ProfileFollowButtonText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center" />
      </FrameLayout>
    </FrameLayout>

    <TextView
      android:id="@+id/profile_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/profile_avatar"
      android:layout_marginTop="16dp"
      tools:text="Ignasi"
      android:textSize="20sp"
      android:textStyle="bold" />


    <TextView
      android:id="@+id/profile_rank"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/profile_name"
      android:layout_marginLeft="8dp"
      android:layout_toRightOf="@+id/profile_name"
      tools:text="rank 34k"
      android:textColor="@color/gray_60" />

    <TextView
      android:id="@+id/profile_bio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/profile_name"
      android:layout_below="@+id/profile_name"
      android:layout_marginTop="4dp"
      tools:text="Sevilla FC. Supporter fince birth. Almost. Member since... whatever. I live in Tokio, Japan. Not really."
      android:textColor="@color/gray_60" />

    <TextView
      android:id="@+id/profile_website"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/profile_bio"
      tools:text="sevibus.sloydev.com"
      android:autoLink="web"
      android:textColor="@color/links" />

  </RelativeLayout>


</LinearLayout>