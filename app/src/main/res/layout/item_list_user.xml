<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <View android:layout_width="match_parent"
    android:layout_below="@+id/item_list_user_info"
    android:layout_height="0.5dp"
    android:layout_marginLeft="@dimen/keyline_2"
    android:layout_marginTop="16dp"
    android:background="@color/separator" />

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/user_avatar"
      android:layout_width="52dp"
      android:layout_height="52dp"
      android:src="@drawable/ic_contact_picture_default"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="16dp" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/user_avatar"
      android:layout_alignTop="@+id/user_avatar"
      android:layout_marginLeft="8dp"
      android:layout_toRightOf="@+id/user_avatar"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:id="@+id/item_list_user_info">

        <TextView
          android:id="@+id/user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:textColor="@color/gray_10"
          android:textSize="16sp"
          tools:text="Rafa" />

        <TextView
          android:id="@+id/user_username"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:lines="1"
          android:textColor="@color/gray_50"
          android:textSize="16sp"
          android:visibility="gone"
          tools:text="rafa"
          tools:visibility="visible" />

    </LinearLayout>

    <com.shootr.android.ui.widgets.FollowButton
      android:id="@+id/user_follow_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginRight="16dp"
      android:layout_centerVertical="true"/>
</RelativeLayout>
