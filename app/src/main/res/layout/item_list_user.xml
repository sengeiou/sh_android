<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/user_avatar"
      android:layout_width="@dimen/userlist_avatar_size"
      android:layout_height="@dimen/userlist_avatar_size"
      android:src="@drawable/ic_contact_picture_default" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/user_avatar"
      android:layout_alignTop="@+id/user_avatar"
      android:layout_marginLeft="16dp"
      android:layout_toRightOf="@+id/user_avatar"
      android:gravity="center_vertical"
      android:orientation="vertical">

        <TextView
          android:id="@+id/user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:textColor="@color/gray_10"
          android:textSize="16sp"
          tools:text="Rafa" />

        <TextView
          android:id="@+id/user_username"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:lines="1"
          android:textColor="@color/gray_50"
          android:textSize="14sp"
          android:visibility="gone"
          tools:text="rafa"
          tools:visibility="visible" />

    </LinearLayout>

    <com.shootr.android.ui.widgets.FollowButton
      android:id="@+id/user_follow_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true" />
</RelativeLayout>