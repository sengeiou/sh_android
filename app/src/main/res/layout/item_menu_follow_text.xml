<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00cc0000"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/keyline_1"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1"
        android:textAppearance="@style/TextAppearance.BottomSheet.Persistent.Row"
        android:textColor="@color/watching"
        android:textSize="14sp"
        tools:text="Descripcion larga"
        />

    <com.shootr.mobile.ui.widgets.FollowButton android:id="@+id/stream_follow_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center_horizontal"
        app:detail_button="true"
        />
</LinearLayout>
