<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/checkin_container"
  android:layout_width="match_parent"
  android:layout_height="@dimen/checkin_bar_height"
  android:background="@color/primary_dark"
  android:foreground="?selectableItemBackground">

    <ImageView android:layout_width="match_parent"
      android:layout_height="8dp"
      android:src="@drawable/shadow_top_down" />

    <TextView android:id="@+id/checkin_text"
      style="@style/BorderlessButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="4dp"
      android:layout_marginTop="4dp"
      android:background="@null"
      android:gravity="center"
      android:text="@string/checkin_action"
      android:textColor="@color/white" />

    <ProgressBar android:id="@+id/checkin_loading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:indeterminate="true"
      android:visibility="gone"
      tools:visibility="visible" />
</FrameLayout>