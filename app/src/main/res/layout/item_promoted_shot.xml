<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight=".9"
      android:descendantFocusability="blocksDescendants"
      android:paddingBottom="12dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="12dp"
      >

    <com.shootr.mobile.ui.widgets.AvatarView
        android:id="@+id/shot_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_contact_picture_default"
        />

    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="46dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/shot_nice_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="4dp"
          android:layout_marginTop="2dp"
          android:gravity="center"
          android:textColor="@color/gray_80"
          android:textSize="12sp"
          tools:text="2"
          />
      <com.shootr.mobile.ui.widgets.NiceButtonView
          android:id="@+id/shot_nice_button"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:visibility="visible"
          style="@style/HearthButton"
          />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/open_menu_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBaseline="@+id/linearLayout2"
        android:layout_marginTop="16dp"
        >
      <LinearLayout
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center|end"
          android:visibility="gone"
          tools:visibility="visible"
          >
        <ImageView
            android:id="@+id/open_menu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center|end"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_more_vert"
            android:visibility="gone"
            tools:visibility="visible"
            />
      </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/shot_avatar"
        android:layout_toRightOf="@+id/shot_avatar"
        android:orientation="vertical"
        >
      <RelativeLayout
          android:id="@+id/shot_name_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/shot_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxWidth="176dp"
            android:singleLine="true"
            android:textColor="@color/gray_10"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Ignasi to cnhdscbhbggkk "
            />

        <FrameLayout
            android:id="@+id/verified_user_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/shot_user_name"
            >
          <ImageView
              android:id="@+id/verified_user"
              android:layout_width="10dp"
              android:layout_height="10dp"
              android:layout_marginLeft="2dp"
              android:src="@drawable/ic_action_verified_shot"
              android:visibility="gone"
              tools:visibility="visible"
              />

          <ImageView
              android:id="@+id/holder_or_contributor_user"
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:layout_gravity="center"
              android:layout_marginTop="0dp"
              android:src="@drawable/ic_stars"
              android:visibility="gone"
              tools:visibility="visible"
              />
        </FrameLayout>

        <TextView
            android:id="@+id/shot_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/verified_user_container"
            android:maxLines="1"
            android:textColor="@color/gray_80"
            android:textSize="14sp"
            tools:text="22m"
            />

        <TextView
            android:id="@+id/shot_promoted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:text="@string/promoted"
            android:layout_toEndOf="@+id/verified_user_container"
            android:layout_alignBottom="@id/shot_user_name"
            android:visibility="gone"
            />

      </RelativeLayout>

      <com.shootr.mobile.ui.widgets.CustomBaseMessageTextView
          android:id="@+id/shot_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/material_black"
          android:textColorLink="@color/links"
          android:textSize="14sp"
          tools:text="Who's the referee? vfdvsdfvgdngjbn mgjknjn gmkfg"
          tools:visibility="visible"

          />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/shot_media_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout2"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        tools:visibility="visible"
        >

      <com.shootr.mobile.ui.widgets.ProportionalImageView
          android:id="@+id/shot_image_landscape"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="1dp"
          android:transitionName="shared_image"
          android:visibility="gone"
          app:riv_corner_radius="10dp"
          tools:src="@drawable/sample_avatar"
          tools:visibility="gone"
          />
      <com.makeramen.roundedimageview.RoundedImageView
          android:id="@+id/default_image"
          android:layout_width="match_parent"
          android:layout_height="165dp"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:scaleType="centerCrop"
          android:visibility="gone"
          app:riv_corner_radius="10dp"
          tools:visibility="visible"
          />

      <FrameLayout
          android:id="@+id/shot_video_frame"
          android:layout_width="match_parent"
          android:layout_height="165dp"
          android:layout_gravity="left|bottom"
          android:background="@drawable/round_corner"
          android:foreground="?selectableItemBackground"
          android:visibility="gone"
          tools:visibility="visible"
          >
        <ImageView
            android:id="@+id/dissmiss_action"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_action_close_gray60_24_nopadding"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/shot_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            tools:text="Titulo del video"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_video_play_circle_48_white"
            />

        <TextView
            android:id="@+id/shot_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            tools:text="0:00"
            />
      </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/shot_reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shot_caption_contianer"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_80"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="8 responses"
        tools:visibility="visible"
        />

    <include
        layout="@layout/stream_shot_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_below="@+id/shot_reply_count"
        android:layout_marginTop="8dp"
        />
    <LinearLayout
        android:id="@+id/shot_caption_contianer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shot_media_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >
      <com.shootr.mobile.ui.widgets.ClickableTextView
          android:id="@+id/shot_caption"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight=".6"
          android:text="Who's the referee? prueba de cómo quedaría"
          android:textColor="@color/gray_30"
          android:textColorLink="@color/links"
          android:textSize="14sp"
          tools:visibility="visible"
          />

      <Button
          android:id="@+id/check_in_button"
          android:layout_width="wrap_content"
          android:layout_height="36dp"
          android:layout_gravity="center"
          android:layout_marginLeft="4dp"
          android:background="@drawable/cta_button_state"
          android:maxLength="25"
          android:maxWidth="150dp"
          android:paddingBottom="4dp"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"
          android:paddingTop="4dp"
          android:text="Comprar"
          android:textAllCaps="false"
          android:textColor="@color/black"
          android:textSize="12sp"
          />

    </LinearLayout>
  </RelativeLayout>
</LinearLayout>