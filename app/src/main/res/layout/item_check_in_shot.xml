<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:descendantFocusability="blocksDescendants"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"
      android:layout_weight=".9"
      >

    <com.shootr.mobile.ui.widgets.AvatarView
        android:id="@+id/shot_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_contact_picture_default"
        />

    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="46dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        >
      <TextView
          android:id="@+id/shot_nice_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/gray_80"
          android:textSize="12sp"
          android:gravity="center"
          android:layout_marginTop="2dp"
          android:layout_marginRight="4dp"
          tools:text="2"
          />
      <com.sackcentury.shinebuttonlib.ShineButton
          android:id="@+id/shot_nice_button"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:scaleType="centerCrop"
          android:visibility="visible"
          app:allow_random_color="false"
          app:big_shine_color="@color/primary_dark"
          app:btn_color="@color/gray_92"
          app:btn_fill_color="@color/primary"
          app:click_animation_duration="200"
          app:enable_flashing="false"
          app:shine_animation_duration="1500"
          app:shine_count="8"
          app:shine_turn_angle="10"
          app:siShape="@drawable/ic_action_favorite_gray"
          app:small_shine_color="@color/accent"
          app:small_shine_offset_angle="20"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/shot_avatar"
        android:layout_toEndOf="@+id/shot_avatar"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:id="@+id/shot_name_container"
          >

        <TextView
            android:id="@+id/shot_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:textColor="@color/gray_10"
            android:textSize="14sp"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="Ignasi to cnhdscbhbggkk "
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />

        <FrameLayout
            android:id="@+id/verified_user_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/shot_user_name"
            android:layout_alignTop="@+id/shot_user_name">
        <ImageView
            android:id="@+id/verified_user"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_action_verified_shot"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <ImageView
            android:id="@+id/holder_or_contributor_user"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_stars"
            android:visibility="gone"
            tools:visibility="visible"
        />
        </FrameLayout>

        <TextView
            android:id="@+id/shot_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_80"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            tools:text="22m"
            android:layout_toEndOf="@+id/verified_user_container"
            />

        <LinearLayout
            android:id="@+id/shot_caption_contianer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shot_user_name"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            >
          <com.shootr.mobile.ui.widgets.BaseMessageTextView
              android:id="@+id/shot_caption"
              android:layout_weight=".6"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:maxWidth="150dp"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textColor="@color/material_black"
              android:textColorLink="@color/links"
              android:textSize="14sp"
              android:layout_gravity="center"
              android:text="Who's the referee? prueba de cómo quedaría"
              tools:visibility ="visible"
              />

          <Button
              android:text="Check-in"
              android:layout_width="wrap_content"
              android:layout_height="32dp"
              android:maxWidth="100dp"
              android:id="@+id/check_in_button"
              android:layout_gravity="center"
              android:textAllCaps="false"
              android:textColor="@color/black"
              android:textSize="12sp"
              android:layout_marginLeft="4dp"
              android:background="@drawable/cta_button_state"
              />

        </LinearLayout>

        <TextView
            android:id="@+id/shot_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_80"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_below="@+id/shot_caption_contianer"
            tools:text="8 responses"
            tools:visibility="visible"
            />

        <include
            layout="@layout/stream_shot_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shot_reply_count"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            />
      </RelativeLayout>


    </LinearLayout>

  </RelativeLayout>
  <LinearLayout
      android:layout_weight=".1"
      android:layout_width="2.1dp"
      android:layout_marginRight="2dp"
      android:layout_height="24dp"
      android:background="@color/gray_92"
      android:layout_gravity="center"
      />
  <LinearLayout
      android:layout_weight=".1"
      android:layout_width="2.3dp"
      android:layout_marginRight="4dp"
      android:layout_height="24dp"
      android:background="@color/gray_92"
      android:layout_gravity="center"
      />
</LinearLayout>