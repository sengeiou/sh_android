<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@drawable/circular_shape"
    android:elevation="4dp"
    >

  <ImageView
      android:id="@+id/stream_image_without_image"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:src="@drawable/ic_contact_picture_default"
      android:visibility="gone"
      android:elevation="4dp"
      />

  <View android:id="@+id/activity_tab_layout_shadow"
      android:layout_width="match_parent"
      android:layout_height="6dp"
      android:background="@drawable/shadow_down_top"
      android:visibility="gone"/>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:orientation="horizontal"
      android:paddingTop="8dp"
      android:paddingRight="8dp"
      android:paddingBottom="8dp"
      android:paddingLeft="16dp"
      android:visibility="gone"
      android:background="@color/connect_controller"
      >

    <LinearLayout
        android:id="@+id/stream_info_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
      <TextView
          android:id="@+id/stream_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="16sp"
          android:fontFamily="sans-serif-medium"
          tools:text="MON RAC 1"
          android:textColor="@color/black"
          />
        <ImageView
            android:id="@+id/stream_verified_connect"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_verified_user"
            android:visibility="gone"
            tools:visibility="visible"
            />
      </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:text="@string/watching_stream_connected"
          android:textColor="#90000000"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/close_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        >
      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_action_close_gray60_24_nopadding"
          android:layout_marginLeft="16dp"
          />
    </LinearLayout>


  </LinearLayout>

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/stream_image"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:layout_gravity="center"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:src="@drawable/ic_contact_picture_default"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="0.3dp"
      android:background="@color/material_black"
      android:visibility="gone"
      />
</LinearLayout>