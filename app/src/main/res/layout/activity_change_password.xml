<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:orientation="vertical"
  tools:context="com.shootr.mobile.ui.activities.ChangePasswordActivity">

    <com.shootr.mobile.ui.widgets.FloatLabelLayout android:id="@+id/change_password_current_password_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

        <EditText android:id="@+id/current_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:hint="@string/current_password_hint"
          android:imeOptions="actionDone"
          android:inputType="textPassword"
          android:lines="1"
          android:maxLength="20"
          android:singleLine="true" />

    </com.shootr.mobile.ui.widgets.FloatLabelLayout>

    <com.shootr.mobile.ui.widgets.FloatLabelLayout android:id="@+id/change_password_new_password_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

        <EditText android:id="@+id/new_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:hint="@string/new_password_hint"
          android:imeOptions="actionDone"
          android:inputType="textPassword"
          android:lines="1"
          android:maxLength="20"
          android:singleLine="true" />

    </com.shootr.mobile.ui.widgets.FloatLabelLayout>

    <com.shootr.mobile.ui.widgets.FloatLabelLayout android:id="@+id/change_password_new_password_again_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

        <EditText android:id="@+id/new_password_again"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:hint="@string/new_password_again_hint"
          android:imeOptions="actionDone"
          android:inputType="textPassword"
          android:lines="1"
          android:maxLength="20"
          android:singleLine="true" />

    </com.shootr.mobile.ui.widgets.FloatLabelLayout>

    <FrameLayout android:id="@+id/change_password_button_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:animateLayoutChanges="true">

        <ProgressBar android:id="@+id/registration_create_progress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:indeterminate="true"
          android:visibility="gone" />

    </FrameLayout>

    <TextView android:id="@+id/change_password_button"
      style="@style/BorderlessButton.Primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?selectableItemBackground"
      android:clickable="true"
      android:text="@string/change_password_button_text"
      android:textSize="14sp"
      android:layout_gravity="right"
      android:paddingRight="16dp" />

</LinearLayout>
