<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    >
  <RelativeLayout
      android:id="@+id/option_picture_container"
      android:layout_marginRight="16dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/option_picture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@color/default_photo_background"
        />

    <ImageView
        android:id="@+id/option_picture_with_text"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@color/default_photo_background"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/option_picture_container"
      android:layout_toEndOf="@+id/option_picture_container"
      >
  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:indeterminate="false"
      android:progress="50"
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:layout_below="@+id/poll_question"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      />

  <TextView
      android:id="@+id/poll_question"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:layout_gravity="right"
      android:maxLength="50"
      android:textSize="16sp"
      tools:text="ella denunciÃ³ a juanito debido a las cosas que le hizo"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@+id/votes"
      android:layout_toStartOf="@+id/votes"
      />
  <TextView
      android:id="@+id/percentage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/progressBar"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_gravity="right"
      android:textSize="14sp"
      tools:text="15%"
      />

  <TextView
      android:id="@+id/votes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:layout_marginRight="8dp"
      android:textSize="14sp"
      tools:text="2550"
      android:layout_above="@+id/progressBar"
      android:layout_toLeftOf="@+id/percentage"
      android:layout_toStartOf="@+id/percentage"
      />
    </RelativeLayout>

</RelativeLayout>