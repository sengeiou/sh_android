<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:fab="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

    <FrameLayout android:id="@+id/timeline_list_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/timeline_new_shot_bar">

        <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/timeline_swipe_refresh"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

            <com.shootr.android.ui.widgets.ScrollListView android:id="@+id/timeline_shot_list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:listitem="@layout/item_list_shot" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <include layout="@layout/include_timeline_empty" />

        <include layout="@layout/include_shadow_above_shot_bar" />

    </FrameLayout>

    <include android:id="@+id/timeline_new_shot_bar"
      layout="@layout/include_new_shot_bar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/new_shot_height"
      android:layout_alignParentBottom="true" />

</RelativeLayout>