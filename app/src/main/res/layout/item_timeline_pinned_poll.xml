<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/poll_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/TimelineIndicator"
    android:foreground="?selectableItemBackground"
    android:layout_height="48dp">

    <TextView android:id="@+id/poll_question"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:singleLine="true"
        android:textColor="@color/material_black"
        android:textSize="15sp"
        android:clickable="false"
        tools:text="Hola quÃ© haces?"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/poll_action"
        android:layout_toStartOf="@+id/poll_action"
        />

    <TextView android:id="@+id/poll_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingRight="24dp"
        android:paddingLeft="16dp"
        android:textColor="@color/material_black"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        tools:text="VOTE"
        />
</RelativeLayout>