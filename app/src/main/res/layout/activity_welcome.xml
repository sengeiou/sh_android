<RelativeLayout
    android:id="@+id/welcome_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Capa 1: icono e indicadores -->
    <ImageView
        android:id="@+id/welcome_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:src="@drawable/ic_launcher"/>

    <gm.mobi.android.ui.widgets.WelcomeIndicator
        android:id="@+id/welcome_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        />


    <!-- Capa 2: ViewPager -->
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <include layout="@layout/include_welcome_text"/>

    <!-- Capa 3: Elementos clicables -->
    <Button
        android:id="@+id/welcome_button"
        style="@style/BlueButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginTop="348dp"
        android:text="Empezar a usar"/>

    <ImageView
        android:id="@+id/welcome_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/welcome_icon"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:src="@drawable/welcome_arrow_left"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/welcome_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/welcome_icon"
        android:layout_marginRight="40dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:src="@drawable/welcome_arrow_right"/>

</RelativeLayout>