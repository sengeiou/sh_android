<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true">

    <!-- List and empty -->
    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/timeline_new">

        <android.support.v4.widget.SwipeRefreshLayout
          android:id="@+id/timeline_swipe_refresh"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="visible">

            <com.shootr.android.ui.widgets.ScrollListView
              android:id="@+id/timeline_list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:listitem="@layout/item_list_shot"
              tools:visibility="visible" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <include layout="@layout/fragment_timeline_empty" />

        <View
          android:layout_width="match_parent"
          android:layout_height="4dp"
          android:layout_gravity="bottom"
          android:background="@drawable/shadow_down_top" />

    </FrameLayout>

    <!-- New shot -->
    <LinearLayout
      android:id="@+id/timeline_new"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:animateLayoutChanges="true"
      android:orientation="vertical">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/new_shot_height"
          android:background="@color/white"
          android:clickable="true">

            <TextView
              android:id="@+id/timeline_new_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginLeft="8dp"
              android:layout_toLeftOf="@+id/timeline_new_image_gallery"
              android:background="@drawable/textfield_multiline_default_holo_light"
              android:fontFamily="sans-serif-light"
              android:text="@string/activity_timeline_new_text"
              android:textColor="@color/gray_60"
              android:textSize="16sp" />

            <ImageButton
              android:id="@+id/timeline_new_image_gallery"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_toLeftOf="@+id/timeline_new_image_camera"
              android:background="?selectableItemBackground"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:src="@drawable/ic_shot_gallery" />

            <ImageButton
              android:id="@+id/timeline_new_image_camera"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_alignParentRight="true"
              android:background="?selectableItemBackground"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:src="@drawable/ic_shot_camera" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>