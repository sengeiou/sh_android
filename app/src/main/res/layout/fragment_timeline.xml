<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
    >

    <!-- Watching request -->
    <RelativeLayout
      android:id="@+id/timeline_watching_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/accent"
      android:visibility="gone">

        <TextView
          android:id="@+id/timeline_watching_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="8dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:paddingTop="16dp"
          android:text="Watching Sevilla-R.Madrid?"
          android:textColor="@color/white"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/timeline_watching_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/timeline_watching_title"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:text="Now playing"
          android:textColor="@color/white_disabled"
          android:textSize="16sp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/timeline_watching_subtitle"
          android:orientation="horizontal">

            <TextView
              android:id="@+id/timeline_watching_action_ignore"
              android:layout_width="0dp"
              android:layout_height="48dp"
              android:layout_toLeftOf="@+id/timeline_watching_action_yes"
              android:layout_weight="1"
              android:background="?android:selectableItemBackground"
              android:clickable="true"
              android:gravity="center"
              android:text="Ignore"
              android:textAllCaps="true"
              android:textColor="@color/white"
              android:textSize="16sp" />

            <TextView
              android:id="@+id/timeline_watching_action_yes"
              android:layout_width="0dp"
              android:layout_height="48dp"
              android:layout_alignParentRight="true"
              android:layout_below="@+id/timeline_watching_subtitle"
              android:layout_weight="1"
              android:background="?android:selectableItemBackground"
              android:clickable="true"
              android:gravity="center"
              android:text="Yes"
              android:textAllCaps="true"
              android:textColor="@color/white"
              android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

    <!-- List and empty -->
    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/timeline_new"
      android:layout_below="@+id/timeline_watching_container">

        <android.support.v4.widget.SwipeRefreshLayout
          android:id="@+id/timeline_swipe_refresh"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="visible">

            <com.shootr.android.ui.widgets.ScrollListView
              android:id="@+id/timeline_list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:listitem="@layout/item_list_shot"
              tools:visibility="visible" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <include layout="@layout/fragment_timeline_empty" />

        <View
          android:layout_width="match_parent"
          android:layout_height="4dp"
          android:layout_gravity="bottom"
          android:background="@drawable/shadow_down_top" />

    </FrameLayout>

    <!-- New shot -->
    <LinearLayout
      android:id="@+id/timeline_new"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:animateLayoutChanges="true"
      android:orientation="vertical">


        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/new_shot_height"
          android:background="@color/white"
          android:clickable="true">

            <TextView
              android:id="@+id/timeline_new_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_toLeftOf="@+id/timeline_new_pronostic"
              android:background="@drawable/textfield_multiline_default_holo_light"
              android:fontFamily="sans-serif-light"
              android:text="@string/activity_timeline_new_text"
              android:textColor="@color/gray_60"
              android:textSize="16sp" />

            <ImageView
              android:id="@+id/timeline_new_pronostic"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:background="?android:selectableItemBackground"
              android:clickable="true"
              android:scaleType="center"
              android:src="@drawable/ic_crosshair"
              android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>