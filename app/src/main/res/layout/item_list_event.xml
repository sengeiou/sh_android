<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:clickable="true"
  android:foreground="?selectableItemBackground"
  android:paddingBottom="8dp"
  android:paddingLeft="16dp"
  android:paddingRight="16dp"
  android:paddingTop="8dp">

    <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content">

        <ImageView android:id="@+id/event_picture"
          android:layout_width="@dimen/event_result_picture_width"
          android:layout_height="@dimen/event_result_picture_height"
          android:layout_marginRight="16dp"
          android:scaleType="centerCrop"
          android:src="@drawable/ic_event_picture_default"
          tools:background="#660000cc" />

        <LinearLayout android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_toLeftOf="@+id/event_watchers"
          android:layout_toRightOf="@+id/event_picture"
          android:orientation="vertical">

            <TextView android:id="@+id/event_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="8dp"
              android:ellipsize="end"
              android:fontFamily="sans-serif-medium"
              android:maxLines="2"
              android:paddingRight="16dp"
              android:textColor="@color/primary_text_dark_color"
              android:textSize="14sp"
              tools:drawableRight="@drawable/ic_notifications_on_16_grey70"
              tools:text="Titulo Dos lÃ­neas" />

            <TextView android:id="@+id/event_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="sans-serif-medium"
              android:textColor="@color/gray_40"
              tools:text="Started 43 minutes ago" />

            <TextView android:id="@+id/event_author"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/gray_60"
              tools:text="Romanesco" />
        </LinearLayout>

        <TextView android:id="@+id/event_watchers"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginLeft="6dp"
          android:drawableRight="@drawable/ic_watchers_gray60_18"
          android:fontFamily="sans-serif-medium"
          android:gravity="center"
          android:textColor="@color/gray_60"
          android:textSize="14sp"
          tools:text="2" />
    </RelativeLayout>
</FrameLayout>

