<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    >

  <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/option_picture_without_text"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:src="@color/default_photo_background"
      android:layout_marginTop="4dp"
      android:layout_marginRight="4dp"
      android:layout_marginLeft="4dp"
      android:layout_marginBottom="4dp"
      android:visibility="visible"
      android:scaleType="centerCrop"
      app:border_color="@color/primary"
      app:border_width="2dp"/>

  <ImageView android:id="@+id/option_picture"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:src="@color/default_photo_background"
      android:layout_marginTop="4dp"
      android:layout_marginRight="4dp"
      android:layout_marginLeft="4dp"
      android:layout_marginBottom="4dp"
      android:visibility="gone"
      android:scaleType="centerCrop" />

  <TextView android:id="@+id/option_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:maxLines="4"
      android:textSize="12sp"
      android:layout_marginBottom="8dp"
      android:gravity="center_horizontal"
      tools:text="Ella matarÃ¡ a Juan debido a tantas cosas malas que le hizo "
      />
</LinearLayout>