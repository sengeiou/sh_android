<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:descendantFocusability="blocksDescendants"
  android:orientation="vertical"
  android:paddingBottom="24dp"
  >

  <View android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/separator"
    />

    <de.hdodenhof.circleimageview.CircleImageView
      android:layout_marginLeft="@dimen/keyline_1"
      android:layout_marginTop="16dp"
      android:id="@+id/shot_avatar"
      android:layout_width="@dimen/shot_avatar_size"
      android:layout_height="@dimen/shot_avatar_size"
      android:layout_marginRight="8dp"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:src="@drawable/ic_contact_picture_default"
      />

    <TextView
      android:id="@+id/shot_user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@+id/shot_timestamp"
      android:layout_alignTop="@id/shot_avatar"
      android:layout_toRightOf="@id/shot_avatar"
      android:textColor="@color/gray_10"
      android:textSize="16sp"
      android:textStyle="bold"
      tools:text="Ignasi"
      />

    <TextView
      android:id="@+id/shot_timestamp"
      android:layout_width="wrap_content"
      android:layout_alignTop="@id/shot_avatar"
      android:layout_marginRight="@dimen/keyline_1"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/gray_60"
      tools:text="22m"
      />

    <com.shootr.android.ui.widgets.ClickableTextView
      android:id="@+id/shot_text"
      android:layout_width="match_parent"
      android:layout_marginRight="@dimen/keyline_1"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/shot_user_name"
      android:layout_below="@id/shot_user_name"
      android:textSize="16sp"
      android:textColor="@color/material_black"
      android:textColorLink="@color/links"
      tools:text="Who's the referee?"
      />

    <com.shootr.android.ui.widgets.ImageView169
      android:id="@+id/shot_image"
      android:layout_marginRight="16dp"
      android:layout_width="match_parent"
      android:layout_height="185dp"
      android:layout_alignLeft="@+id/shot_text"
      android:layout_below="@+id/shot_text"
      android:layout_marginTop="8dp"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:scaleType="centerCrop"
      android:visibility="gone"
      tools:visibility="visible" />

</RelativeLayout>