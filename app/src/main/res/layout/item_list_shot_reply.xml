<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/shot_reply_container"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:descendantFocusability="blocksDescendants"
  android:orientation="vertical">

    <View android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/separator" />

    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/shot_avatar"
      android:layout_width="@dimen/shot_avatar_size"
      android:layout_height="@dimen/shot_avatar_size"
      android:layout_marginLeft="@dimen/keyline_1"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:src="@drawable/ic_contact_picture_default" />

    <TextView android:id="@+id/shot_user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@id/shot_avatar"
      android:layout_toLeftOf="@+id/shot_timestamp"
      android:layout_toRightOf="@id/shot_avatar"
      android:textColor="@color/gray_10"
      android:textSize="16sp"
      android:textStyle="bold"
      tools:text="Ignasi" />

    <TextView android:id="@+id/shot_timestamp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignTop="@id/shot_avatar"
      android:layout_marginRight="@dimen/keyline_1"
      android:textColor="@color/gray_60"
      tools:text="22m" />

    <com.shootr.mobile.ui.widgets.ClickableTextView android:id="@+id/shot_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/shot_user_name"
      android:layout_below="@id/shot_user_name"
      android:layout_marginRight="@dimen/keyline_1"
      android:textColor="@color/material_black"
      android:textColorLink="@color/links"
      android:textSize="16sp"
      tools:text="Who's the referee?" />

    <RelativeLayout android:id="@+id/shot_media_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/shot_text"
      android:layout_below="@+id/shot_text"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:paddingRight="16dp">

        <com.shootr.mobile.ui.widgets.ImageView169 android:id="@+id/shot_image"
          android:layout_width="match_parent"
          android:layout_height="@dimen/shot_item_image_height"
          android:layout_marginBottom="8dp"
          android:layout_marginTop="8dp"
          android:scaleType="centerCrop"
          android:visibility="gone"
          tools:src="@drawable/sample_avatar"
          tools:visibility="visible" />

        <FrameLayout android:id="@+id/shot_video_frame"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_alignBottom="@+id/shot_image"
          android:layout_alignTop="@+id/shot_image"
          android:background="#66000000"
          android:foreground="?selectableItemBackground"
          android:visibility="visible"
          tools:visibility="visible">

            <TextView android:id="@+id/shot_video_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:textColor="@color/white"
              tools:text="Titulo del video" />

            <ImageView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:scaleType="center"
              android:src="@drawable/ic_video_play_circle_48_white" />

            <TextView android:id="@+id/shot_video_duration"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right|bottom"
              android:layout_margin="8dp"
              android:textColor="@color/white"
              tools:text="0:00" />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/shot_media_content"
      android:layout_marginBottom="8dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="4dp"
      android:orientation="horizontal">

        <TextView android:id="@+id/shot_nice_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginRight="8dp"
          android:textColor="@color/gray_80"
          android:textSize="14sp"
          tools:text="8 nices" />

        <com.shootr.mobile.ui.widgets.NiceButtonView android:id="@+id/shot_nice_button"
          style="@style/NiceButton"
          android:layout_width="@dimen/nice_button_size"
          android:layout_height="@dimen/nice_button_size" />

    </LinearLayout>

</RelativeLayout>