<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="@dimen/new_shot_height"
  android:background="@color/white"
  android:clickable="true"
  tools:showIn="@layout/fragment_timeline">

  <TextView android:id="@+id/shot_bar_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="8dp"
    android:layout_toLeftOf="@+id/shot_bar_drafts"
    android:background="@drawable/textfield_multiline_default_holo_light"
    android:ellipsize="end"
    android:fontFamily="sans-serif-light"
    android:maxLines="1"
    android:text="@string/new_shot_placeholder"
    android:textColor="@color/gray_60"
    android:textSize="16sp" />

  <ImageButton android:id="@+id/shot_bar_drafts"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_toLeftOf="@+id/shot_bar_photo"
    android:visibility="gone"
    android:background="?selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:src="@drawable/ic_drafts_24_gray54" />

  <ImageButton android:id="@+id/shot_bar_photo"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:background="?selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:src="@drawable/ic_shot_camera" />

</RelativeLayout>