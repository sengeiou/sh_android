<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?selectableItemBackground"
  android:clickable="true"
  android:orientation="horizontal"
  android:paddingBottom="8dp"
  android:paddingLeft="16dp"
  android:paddingRight="16dp"
  android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/watcher_user_avatar"
      android:layout_width="@dimen/userlist_avatar_size"
      android:layout_height="@dimen/userlist_avatar_size"
      android:src="@drawable/ic_contact_picture_default" />

    <TextView
      android:id="@+id/watcher_user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="16dp"
      android:layout_toRightOf="@+id/watcher_user_avatar"
      android:textColor="@color/gray_10"
      android:textSize="16sp"
      tools:text="Rafa" />

    <TextView
      android:id="@+id/watcher_user_watching"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/watcher_user_name"
      android:layout_below="@+id/watcher_user_name"
      android:layout_toLeftOf="@+id/watcher_user_edit"
      android:ellipsize="end"
      android:lines="1"
      android:maxLines="1"
      android:textColor="@color/watching"
      android:textSize="14sp"
      tools:text="Watching" />

    <ImageView
      android:id="@+id/watcher_user_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:background="?selectableItemBackgroundBorderless"
      android:clickable="true"
      android:src="@drawable/ic_info_edit"
      android:visibility="gone"
      tools:visibility="visible" />

</RelativeLayout>
