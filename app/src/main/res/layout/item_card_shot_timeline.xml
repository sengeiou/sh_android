<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        >

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/shot_avatar"
          android:layout_width="@dimen/shot_avatar_size"
          android:layout_height="@dimen/shot_avatar_size"
          android:layout_marginRight="8dp"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:src="@drawable/ic_contact_picture_default"
          />

      <TextView
          android:id="@+id/shot_user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/shot_avatar"
          android:textColor="@color/gray_10"
          android:textSize="16sp"
          android:textStyle="bold"
          tools:text="Ignasi"
          />

      <TextView
          android:id="@+id/shot_timestamp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:textColor="@color/gray_60"
          tools:text="22m"
          />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/shot_media_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

      <com.makeramen.roundedimageview.RoundedImageView
          android:id="@+id/shot_image"
          android:layout_width="match_parent"
          android:layout_height="@dimen/shot_item_image_height"
          android:layout_marginBottom="8dp"
          android:scaleType="centerCrop"
          android:visibility="gone"
          tools:src="@drawable/sample_avatar"
          tools:visibility="visible"
          />

      <FrameLayout
          android:id="@+id/shot_video_frame"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="8dp"
          android:layout_marginTop="8dp"
          android:background="#66000000"
          android:foreground="?selectableItemBackground"
          android:visibility="gone"
          tools:visibility="visible"
          >

        <TextView
            android:id="@+id/shot_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            tools:text="Titulo del video"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_video_play_circle_48_white"
            />

        <TextView
            android:id="@+id/shot_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            tools:text="0:00"
            />
      </FrameLayout>
    </FrameLayout>
    <com.shootr.mobile.ui.widgets.ClickableTextView
        android:id="@+id/shot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/material_black"
        android:textColorLink="@color/links"
        android:textSize="16sp"
        tools:text="Who's the referee?"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
      <LinearLayout
          android:id="@+id/nices_container"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/nice_button_size"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginRight="44dp"
          android:layout_marginTop="@dimen/nice_button_margin_top_normal"
          android:layout_toLeftOf="@+id/shot_nice_button"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/shot_nice_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_80"
            android:textSize="14sp"
            tools:text="8"
            />

      </LinearLayout>

      <TextView
          android:id="@+id/shot_reply_count"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignBottom="@+id/nices_container"
          android:layout_alignTop="@+id/nices_container"
          android:layout_gravity="center_vertical"
          android:layout_marginRight="2dp"
          android:gravity="center"
          android:orientation="horizontal"
          android:src="@drawable/ic_reply_gray_600"
          android:textColor="@color/gray_80"
          android:textSize="14sp"
          android:visibility="gone"
          tools:text="8"
          />

      <ImageView
          android:id="@+id/shot_reply_button_no_replies"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignBottom="@+id/nices_container"
          android:layout_alignTop="@+id/nices_container"
          android:layout_toRightOf="@+id/shot_reply_count"
          android:paddingRight="8dp"
          android:src="@drawable/ic_reply_gray_300"
          android:visibility="gone"
          tools:visibility="visible"
          />
      <ImageView
          android:id="@+id/shot_reply_button"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignBottom="@+id/nices_container"
          android:layout_alignTop="@+id/nices_container"
          android:layout_toRightOf="@+id/shot_reply_count"
          android:paddingRight="8dp"
          android:src="@drawable/ic_reply_gray_600"
          android:visibility="gone"
          tools:visibility="visible"
          />
      <com.shootr.mobile.ui.widgets.NiceButtonView
          android:id="@+id/shot_nice_button"
          android:layout_width="@dimen/nice_button_size"
          android:layout_height="@dimen/nice_button_size"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginTop="@dimen/nice_button_margin_top_normal"
          android:visibility="visible"
          style="@style/NiceButton"
          />

      <LinearLayout
          android:id="@+id/shot_hide_button_container"
          android:layout_width="48dp"
          android:layout_height="@dimen/nice_button_size"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginTop="@dimen/nice_button_margin_top_normal"
          android:gravity="center|bottom|right"
          android:visibility="gone"
          >

        <ImageView
            android:id="@+id/shot_hide_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="-4dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_action_close_gray60_24_nopadding"
            />

      </LinearLayout>
    </RelativeLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>
