<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container">

    <android.support.design.widget.TabLayout android:id="@+id/activity_tab_layout"
        android:layout_width="match_parent"
        style="@style/ShootrTabLayout"
        android:layout_height="wrap_content" />

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager android:id="@+id/activity_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/activity_tab_layout_shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_shadow_height"
            android:background="@drawable/shadow_top_down" />

    </FrameLayout>

</LinearLayout>