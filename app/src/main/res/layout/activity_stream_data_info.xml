<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.shootr.mobile.ui.activities.StreamDataInfoActivity">

    <FrameLayout android:id="@+id/stream_data_info_stream_name_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

        <TextView android:id="@+id/stream_data_info_stream_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:paddingLeft="@dimen/keyline_1"
          android:paddingRight="16dp"
          android:paddingTop="14dp"
          android:textAppearance="@style/TextAppearance.BottomSheet.Persistent.Row"
          android:textColor="@color/watching"
          android:textSize="14sp" />

    </FrameLayout>

    <FrameLayout android:id="@+id/stream_data_info_participants_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

        <TextView android:id="@+id/stream_data_info_participants_number"
          android:layout_width="wrap_content"
          android:layout_height="56dp"
          android:layout_gravity="end|center_vertical"
          android:gravity="center_vertical"
          android:paddingRight="16dp"
          android:textAppearance="@style/TextAppearance.Switch"
          android:textColor="@color/gray_60"
          tools:text="288" />

        <TextView android:id="@+id/stream_data_info_participants_text"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:gravity="center_vertical"
          android:paddingLeft="16dp"
          android:text="@string/stream_data_info_participants"
          android:textAppearance="@style/TextAppearance.Switch"
          android:textColor="@color/gray_30" />

    </FrameLayout>

    <View android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:background="@color/separator" />

    <FrameLayout android:id="@+id/stream_data_info_participants_with_shots_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|center_vertical"
          android:gravity="center_vertical"
          android:orientation="horizontal">

            <TextView android:id="@+id/stream_data_info_participants_with_shots_number"
              android:layout_width="wrap_content"
              android:layout_height="56dp"
              android:layout_gravity="end|center_vertical"
              android:gravity="center_vertical"
              android:paddingRight="4dp"
              android:textAppearance="@style/TextAppearance.Switch"
              android:textColor="@color/gray_60"
              tools:text="88" />

            <TextView android:id="@+id/stream_data_info_participants_with_shots_number_pct"
              android:layout_width="wrap_content"
              android:layout_height="56dp"
              android:gravity="center_vertical"
              android:paddingRight="16dp"
              android:textAppearance="@style/TextAppearance.Switch"
              android:textColor="@color/gray_60"
              tools:text="84%" />

        </LinearLayout>

        <TextView android:id="@+id/stream_data_info_participants_with_shots_text"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:gravity="center_vertical"
          android:paddingLeft="16dp"
          android:text="@string/stream_data_info_participants_with_shots"
          android:textAppearance="@style/TextAppearance.Switch"
          android:textColor="@color/gray_30" />

    </FrameLayout>

    <View android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:background="@color/separator" />

    <FrameLayout android:id="@+id/stream_data_info_shots_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

        <TextView android:id="@+id/stream_data_info_shots_number"
          android:layout_width="wrap_content"
          android:layout_height="56dp"
          android:layout_gravity="end|center_vertical"
          android:gravity="center_vertical"
          android:paddingRight="16dp"
          android:textAppearance="@style/TextAppearance.Switch"
          android:textColor="@color/gray_60"
          tools:text="14" />

        <TextView android:id="@+id/stream_data_info_shots_text"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:gravity="center_vertical"
          android:paddingLeft="16dp"
          android:text="@string/stream_data_info_shots"
          android:textAppearance="@style/TextAppearance.Switch"
          android:textColor="@color/gray_30" />

    </FrameLayout>

    <View android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:background="@color/separator" />

    <FrameLayout android:id="@+id/stream_data_info_favorites_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|center_vertical"
          android:gravity="center_vertical"
          android:orientation="horizontal">

            <TextView android:id="@+id/stream_data_info_favorites_number"
              android:layout_width="wrap_content"
              android:layout_height="56dp"
              android:layout_gravity="end|center_vertical"
              android:gravity="center_vertical"
              android:paddingRight="4dp"
              android:textAppearance="@style/TextAppearance.Switch"
              android:textColor="@color/gray_60"
              tools:text="88" />

            <TextView android:id="@+id/stream_data_info_favorites_number_pct"
              android:layout_width="wrap_content"
              android:layout_height="56dp"
              android:layout_gravity="end|center_vertical"
              android:gravity="center_vertical"
              android:paddingRight="16dp"
              android:textAppearance="@style/TextAppearance.Switch"
              android:textColor="@color/gray_60"
              tools:text="88%" />
        </LinearLayout>

        <TextView android:id="@+id/stream_data_info_favorites_text"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:gravity="center_vertical"
          android:paddingLeft="16dp"
          android:text="@string/stream_data_info_favorites"
          android:textAppearance="@style/TextAppearance.Switch"
          android:textColor="@color/gray_30" />

    </FrameLayout>

    <View android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:background="@color/separator" />

</LinearLayout>
