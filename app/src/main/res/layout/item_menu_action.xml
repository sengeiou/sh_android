<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="56dp"
  android:background="?selectableItemBackground"
  android:clickable="true">

    <ImageView android:id="@+id/action_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="16dp"
      tools:src="@drawable/ic_stream_author_24_gray50" />

    <TextView android:id="@+id/action_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:paddingLeft="@dimen/keyline_2"
      android:textAppearance="@style/TextAppearance.BottomSheet.Persistent.Row"
      tools:text="People or something" />

    <TextView android:id="@+id/action_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|center_vertical"
      android:layout_marginRight="16dp"
      android:gravity="center_vertical"
      android:paddingRight="8dp"
      android:textAppearance="@style/TextAppearance.BottomSheet.Persistent.Row"
      android:textColor="@color/primary"
      tools:text="7" />
</FrameLayout>