<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#d9d9d9" />

    <com.shootr.android.ui.widgets.FloatLabelLayout
      android:id="@+id/new_stream_title_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

        <EditText
          android:id="@+id/new_stream_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/new_stream_title_label"
          android:imeOptions="actionDone"
          android:inputType="text|textCapSentences|textNoSuggestions"
          android:lines="1"
          android:maxLength="50"
          android:nextFocusDown="@+id/profile_edit_username"
          android:singleLine="true"
          tools:text="My New Event" />
    </com.shootr.android.ui.widgets.FloatLabelLayout>

    <TextView
      android:id="@+id/new_stream_title_error"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="4dp"
      android:layout_marginLeft="@dimen/keyline_1"
      android:paddingLeft="4dp"
      android:visibility="visible"
      tools:text="Error title"
      style="@style/ErrorSubtitle" />

    <com.shootr.android.ui.widgets.FloatLabelLayout
      android:id="@+id/new_event_short_title_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      app:floatLabelTextAppearance="@style/TextAppearance.FloatLabel">

      <EditText
        android:id="@+id/new_stream_short_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_stream_short_title_label"
        android:imeOptions="actionDone"
        android:inputType="text|textCapSentences|textNoSuggestions"
        android:lines="1"
        android:maxLength="20"
        android:nextFocusDown="@+id/profile_edit_username"
        android:singleLine="true"
        tools:text="MyNewEvent" />
    </com.shootr.android.ui.widgets.FloatLabelLayout>

    <TextView
      android:id="@+id/new_stream_short_title_warning"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="4dp"
      android:layout_marginLeft="@dimen/keyline_1"
      android:paddingLeft="4dp"
      android:textColor="@color/error"
      android:textSize="12sp"
      tools:text="3 to 20 characters" />

</LinearLayout>