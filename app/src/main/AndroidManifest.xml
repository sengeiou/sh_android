<manifest
  package="com.shootr.android"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- Sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <!-- Account management -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <!-- GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="${packageName}.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- optional -->

    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />
    <uses-permission android:name="${packageName}.permission.C2D_MESSAGE" />

    <permission android:name="${packageName}.permission.C2D_MESSAGE" android:protectionLevel="signature"/>

    <application
      android:name=".ShootrApplication"
      android:allowBackup="true"
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/ShootrTheme">


        <activity
          android:name=".ui.activities.TimelineActivity"
          android:label="@string/app_name"
          android:launchMode="singleTask"
          >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.PeopleActivity"
            android:label="@string/drawer_people_title"
            />

        <activity
          android:name=".ui.activities.registro.WelcomeLoginActivity"
          android:label="@string/app_name"
          android:launchMode="singleTop"
          android:theme="@style/ShootrTheme.NoActionBar">
        </activity>
        <!--<activity
            android:name=".ui.activities.registro.EmailRegistrationActivity"
            android:label="@string/title_activity_registro_email">
        </activity>
        <activity
            android:name=".ui.activities.registro.FacebookRegistroActivity"
            android:label="@string/title_activity_registro_email">
        </activity>-->
        <activity
          android:name=".ui.activities.registro.EmailLoginActivity"
          android:label="@string/title_activity_login_email">
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.registro.WelcomeLoginActivity"/>
        </activity>


        <activity
          android:name=".ui.activities.PostNewShotActivity"
          android:theme="@style/ShootrTheme.NoActionBar.Floating">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.ProfileContainerActivity" >
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.TimelineActivity" />
        </activity>

        <activity android:name=".ui.activities.UserFollowsContainerActivity" >
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.TimelineActivity" />
        </activity>

        <activity
          android:name=".ui.activities.FindFriendsActivity"
          android:theme="@style/ShootrTheme.Closable"
          android:label="@string/activity_find_friends_title">

            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.TimelineActivity" />
        </activity>

        <activity
          android:name=".ui.activities.EventDetailActivity"
          android:theme="@style/ShootrTheme.TranslucentToolbar"
          android:label="@string/activity_info_title">

            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.TimelineActivity" />
        </activity>

        <activity
          android:name=".ui.activities.EditStatusActivity"
          android:label="@string/activity_edit_status_title"
          android:theme="@style/ShootrTheme.Closable"
          android:windowSoftInputMode="stateVisible"></activity>

        <activity
          android:name="com.shootr.android.ui.activities.ProfileEditActivity"
          android:label="@string/profile_edit_profile"
          android:theme="@style/ShootrTheme.Closable"
          android:parentActivityName="com.shootr.android.ui.activities.ProfileContainerActivity" >
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.ProfileContainerActivity" />
        </activity>

        <activity
          android:name="com.shootr.android.ui.activities.SearchTeamActivity"
          android:label="@string/activity_search_team_hint"
          android:parentActivityName="com.shootr.android.ui.activities.ProfileContainerActivity"
          android:theme="@style/ShootrTheme.Closable">
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.ProfileContainerActivity" />
        </activity>

        <activity
          android:name="com.shootr.android.ui.activities.ShotDetailActivity"
          android:parentActivityName="com.shootr.android.ui.activities.TimelineActivity"
          >
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.TimelineActivity" />
        </activity>

        <activity
          android:name=".ui.activities.PhotoViewActivity"
          android:theme="@style/ShootrTheme.PhotoViewer"
          >
        </activity>

        <activity
          android:name="com.shootr.android.ui.activities.EventsListActivity"
          android:label="@string/activity_event_list_title"
          android:theme="@style/ShootrTheme" >
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value=".ui.activities.EventDetailActivity" />
          </activity>

        <activity
          android:name="com.shootr.android.ui.activities.NewEventActivity"
          android:label="@string/activity_new_event_title"
          android:theme="@style/ShootrTheme.Closable" >
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.shootr.android.ui.activities.EventsListActivity" />
          </activity>

        <activity
          android:name=".ui.activities.DateTimePickerDialogActivity"
          android:theme="@style/ShootrTheme.NoActionBar.Floating">
        </activity>

        <activity
          android:name=".ui.activities.TimezonePickerActivity"
          android:label="@string/activity_pick_timezone_title"
          android:theme="@style/ShootrTheme.Closable"
          >
        </activity>

        <activity
          android:name=".ui.activities.DraftsActivity"
          android:label="@string/activity_drafts_title"
          android:theme="@style/ShootrTheme.DarkToolbar"
          >
        </activity>

        <activity android:name=".ui.activities.UpdateWarningActivity"
          android:launchMode="singleTask"
            />

        <service android:name=".data.background.ShotDispatcherBackgroundService" />

        <meta-data
          android:name="com.facebook.sdk.ApplicationId"
          android:value="@string/facebookID"
          />

        <!-- Sync adapter -->

        <service android:name=".sync.ShootrAccountService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
              android:name="android.accounts.AccountAuthenticator"
              android:resource="@xml/authenticator"/>
        </service>

        <provider
          android:name="com.shootr.android.db.provider.ShootrContentProvider"
          android:authorities="${applicationId}.db.provider"
          android:exported="false"
          android:syncable="true"/>

        <service
          android:name="com.shootr.android.sync.SyncService"
          android:exported="true"
          android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
              android:name="android.content.SyncAdapter"
              android:resource="@xml/syncadapter"/>
        </service>

        <receiver android:name=".notifications.gcm.GCMBroadcastReceiver"
          android:exported="true"
          android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>

        <receiver android:name=".notifications.gcm.NotificationIntentReceiver"
          >
            <intent-filter>
                <action android:name="com.shootr.android.ACTION_DISCARD_SHOT_NOTIFICATION" />
                <action android:name="com.shootr.android.ACTION_OPEN_SHOT_NOTIFICATION" />
                <action android:name="com.shootr.android.ACTION_OPEN_PROFILE"/>
                <action android:name="com.shootr.android.ACTION_OPEN_STATUS_CHANGED"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service
          android:name=".notifications.gcm.GCMIntentService"
          android:exported="false" />
        <meta-data android:name="com.crashlytics.ApiKey" android:value="51ae38f9afc83455fd0ae5f47de08cc2aff97662"/>


    </application>

</manifest>
