<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shootr.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <!-- Account management -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="${packageName}.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- optional -->

    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />
    <uses-permission android:name="${packageName}.permission.C2D_MESSAGE" />

    <permission
        android:name="${packageName}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:name=".ShootrApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ShootrTheme" >
        <activity
            android:name=".ui.activities.MainTabbedActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.StreamTimelineActivity" >
        </activity>
        <activity
            android:name=".ui.activities.registro.LoginSelectionActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/ShootrTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.activities.registro.EmailRegistrationActivity"
            android:label="@string/title_activity_registration_email"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".ui.activities.registro.EmailLoginActivity"
            android:label="@string/title_activity_login_email" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.registro.LoginSelectionActivity" />
        </activity>
        <activity
            android:name=".ui.activities.PostNewShotActivity"
            android:theme="@style/ShootrTheme.NoActionBar.Floating" >
        </activity>
        <activity android:name=".ui.activities.ProfileContainerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainTabbedActivity" />
        </activity>
        <activity android:name=".ui.activities.UserFollowsContainerActivity" >
        </activity>
        <activity
            android:name=".ui.activities.FindFriendsActivity"
            android:label="@string/activity_find_friends_title"
            android:theme="@style/ShootrTheme.Closable" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainTabbedActivity" />
        </activity>
        <activity
            android:name=".ui.activities.StreamDetailActivity"
            android:label="Participants"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainTabbedActivity" />
        </activity>
        <activity
            android:name=".ui.activities.ProfileEditActivity"
            android:label="@string/profile_edit_profile"
            android:parentActivityName=".ui.activities.ProfileContainerActivity"
            android:theme="@style/ShootrTheme.Closable" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shootr.android.ui.activities.ProfileContainerActivity" />
        </activity>
        <activity
            android:name=".ui.activities.ShotDetailActivity"
            android:parentActivityName=".ui.activities.StreamTimelineActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.StreamTimelineActivity" />
        </activity>
        <activity
            android:name=".ui.activities.PhotoViewActivity"
            android:theme="@style/ShootrTheme.PhotoViewer" >
        </activity>
        <activity
            android:name=".ui.activities.NewStreamActivity"
            android:label="@string/activity_new_stream_title"
            android:theme="@style/ShootrTheme.Closable" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainTabbedActivity" />
        </activity>
        <activity
            android:name=".ui.activities.DraftsActivity"
            android:label="@string/activity_drafts_title"
            android:theme="@style/ShootrTheme.DarkToolbar" >
        </activity>
        <activity android:name=".ui.activities.UpdateWarningActivity" />
        <activity android:name=".ui.activities.WhaleActivity" />
        <activity
            android:name=".ui.activities.ActivityTimelineContainerActivity"
            android:label="@string/drawer_activity_title" />

        <service android:name=".data.background.ShotDispatcherBackgroundService" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebookID" />

        <receiver
            android:name=".notifications.gcm.GCMBroadcastReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>
        <receiver android:name=".notifications.gcm.NotificationIntentReceiver" >
            <intent-filter>
                <action android:name="com.shootr.android.ACTION_DISCARD_SHOT_NOTIFICATION" />
                <action android:name="com.shootr.android.ACTION_OPEN_SHOT_NOTIFICATION" />
                <action android:name="com.shootr.android.ACTION_OPEN_PROFILE" />
                <action android:name="com.shootr.android.ACTION_OPEN_ACTIVITY_NOTIFICATION" />
                <action android:name="com.shootr.android.ACTION_DISCARD_ACTIVITY_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".notifications.gcm.GCMIntentService"
            android:exported="false" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="51ae38f9afc83455fd0ae5f47de08cc2aff97662" />

        <activity
            android:name=".ui.activities.StreamMediaActivity"
            android:label="@string/title_activity_stream_media" />
        <activity
            android:name=".ui.activities.registro.ResetPasswordActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_reset_password" >
        </activity>
        <activity
            android:name=".ui.activities.ListingActivity"
            android:label="@string/title_activity_listing" >
        </activity>
        <activity
            android:name=".ui.activities.FindStreamsActivity"
            android:label="@string/activity_find_streams_title"
            android:theme="@style/ShootrTheme.Closable" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".ui.activities.EmailConfirmationActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_email_confirmation" >
        </activity>
        <activity
            android:name=".ui.activities.AllShotsActivity"
            android:label="@string/title_activity_all_shots" >
        </activity>
        <activity
            android:name=".ui.activities.SupportActivity"
            android:label="@string/title_activity_support" >
        </activity>
        <activity
            android:name=".ui.activities.ChangePasswordActivity"
            android:label="@string/title_activity_change_password" >
        </activity>
        <activity
            android:name=".ui.activities.IntroActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activities.AllParticipantsActivity"
            android:label="@string/title_activity_all_participants" >
        </activity>
        <activity
            android:name=".ui.activities.FindParticipantsActivity"
            android:theme="@style/ShootrTheme.Closable">
        </activity>
    </application>

</manifest>
