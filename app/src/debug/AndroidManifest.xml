<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shootr.android">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application>
        <activity
            android:name=".ui.activities.LogReaderActivity"
            android:label="Log Viewer">
        </activity>

        <receiver android:name=".data.SyncBroadcastReceiver">
            <intent-filter >
                <action android:name="com.shootr.android.ACTION_SYNC" />
            </intent-filter>
          </receiver>
    </application>

</manifest>
