<?xml version="1.0" encoding="UTF-8"?><AccessPolicy Version="1.0.0" Description="Políticas de acceso a las entidades de la aplicación Golesmessenger">	<Entities Name="Campaigns">		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="Campaign">CampaignView</Name>			<Data>				<!--					ALTER TABLE `igolespro`.`Campaign` 					ADD COLUMN `csys_birth` DATETIME NULL AFTER `targetCampaign`,					ADD COLUMN `csys_modified` DATETIME NULL AFTER `csys_birth`,					ADD COLUMN `csys_deleted` DATETIME NULL AFTER `csys_modified`,					ADD COLUMN `csys_revision` INT NULL DEFAULT 0 AFTER `csys_deleted`,					ADD COLUMN `csys_syncronized` CHAR NULL AFTER `csys_revision`;					CREATE VIEW CampaignView AS SELECT c.idCampaign, c.title, 1 as active, c.deviceType, c.csys_birth, c.csys_modified, c.csys_deleted, c.csys_revision FROM Campaign c;				-->				<Attribute Alias="idCampaign" Direction="Output">idCampaign</Attribute>				<Attribute Alias="title" Direction="Output">title</Attribute>				<Attribute Alias="active" Direction="Output">active</Attribute>				<Attribute Alias="deviceType" Direction="Output">deviceType</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idCampaign">idCampaign</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="deviceType">deviceType</Attribute>				</Filter>				<Filter>					<Attribute Alias="modified">csys_modified</Attribute>				</Filter>			</Filters>		</Entity>		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="CampaignMessage">CampaignMessageView</Name>			<Data>				<!--					ALTER TABLE `igolespro`.`CampaignMessage` 					ADD COLUMN `csys_birth` DATETIME NULL AFTER `textExt`,					ADD COLUMN `csys_modified` DATETIME NULL AFTER `csys_birth`,					ADD COLUMN `csys_deleted` DATETIME NULL AFTER `csys_modified`,					ADD COLUMN `csys_revision` INT NULL DEFAULT 0 AFTER `csys_deleted`,					ADD COLUMN `csys_syncronized` CHAR NULL AFTER `csys_revision`;					CREATE VIEW CampaignMessageView AS SELECT cm.idCampaign, cm.text, cm.textExt, '' as path, cm.screen, 1 as mode, c.startDate, c.endDate, 1 as active, c.deviceType, cm.csys_birth, cm.csys_modified, cm.csys_deleted, cm.csys_revision FROM Campaign c INNER JOIN CampaignMessage cm ON c.idCampaign = cm.idCampaign;				-->								<Attribute Alias="idCampaign" Direction="Output">idCampaign</Attribute>				<Attribute Alias="text" Direction="Output">text</Attribute>				<Attribute Alias="textExt" Direction="Output">textExt</Attribute>				<Attribute Alias="path" Direction="Output">path</Attribute>				<Attribute Alias="screen" Direction="Output">screen</Attribute>				<Attribute Alias="mode" Direction="Output">mode</Attribute>				<Attribute Alias="startDate" Direction="Output">startDate</Attribute>				<Attribute Alias="endDate" Direction="Output">endDate</Attribute>				<Attribute Alias="deviceType" Direction="Output">deviceType</Attribute>				<Attribute Alias="active" Direction="Output">active</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idCampaign">idCampaign</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="active">active</Attribute>					<Attribute Alias="deviceType">deviceType</Attribute>				</Filter>				<Filter>					<Attribute Alias="modified">csys_modified</Attribute>				</Filter>			</Filters>		</Entity>	</Entities></AccessPolicy>