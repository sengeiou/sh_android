<?xml version="1.0" encoding="UTF-8"?><AccessPolicy Version="1.0.0" Description="Políticas de acceso a las entidades de la aplicación Golesmessenger">	<Entities Name="Jornadas - Partidos - Equipos">		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="CurrentFixtureMode">CurrentFixtureMode</Name>			<Data>				<!--				CREATE OR REPLACE VIEW CurrentFixtureMode AS					(SELECT lt.IdLeague, f.idFixture, f.csys_birth, f.csys_deleted, f.csys_modified, f.csys_revision FROM Fixture f					JOIN Tournament t ON t.idTournament = f.idTournament					JOIN LeagueTournament lt ON lt.idTournament = t.idTournament AND lt.IdLeague = 1					WHERE CURRENT_DATE <= f.DateStart ORDER BY f.DateStart ASC LIMIT 4)				UNION					(SELECT lt.IdLeague, f.idFixture, f.csys_birth, f.csys_deleted, f.csys_modified, f.csys_revision FROM Fixture f					JOIN Tournament t ON t.idTournament = f.idTournament					JOIN LeagueTournament lt ON lt.idTournament = t.idTournament AND lt.IdLeague = 1					WHERE CURRENT_TIMESTAMP >= f.DateEnd ORDER BY f.DateEnd DESC LIMIT 1)				UNION					(SELECT lt.IdLeague, f.idFixture, f.csys_birth, f.csys_deleted, f.csys_modified, f.csys_revision FROM Fixture f					JOIN Tournament t ON t.idTournament = f.idTournament					JOIN LeagueTournament lt ON lt.idTournament = t.idTournament AND lt.IdLeague = 2					WHERE CURRENT_DATE <= f.DateStart ORDER BY f.DateStart ASC LIMIT 4)				UNION					(SELECT lt.IdLeague, f.idFixture, f.csys_birth, f.csys_deleted, f.csys_modified, f.csys_revision FROM Fixture f					JOIN Tournament t ON t.idTournament = f.idTournament					JOIN LeagueTournament lt ON lt.idTournament = t.idTournament AND lt.IdLeague = 2					WHERE CURRENT_TIMESTAMP >= f.DateEnd ORDER BY f.DateEnd DESC LIMIT 1)				UNION					(SELECT lt.IdLeague, f.idFixture, f.csys_birth, f.csys_deleted, f.csys_modified, f.csys_revision FROM Fixture f					JOIN Tournament t ON t.idTournament = f.idTournament					JOIN LeagueTournament lt ON lt.idTournament = t.idTournament AND lt.IdLeague = 3					WHERE CURRENT_DATE <= f.DateStart ORDER BY f.DateStart ASC LIMIT 4)				UNION					(SELECT lt.IdLeague, f.idFixture, f.csys_birth, f.csys_deleted, f.csys_modified, f.csys_revision FROM Fixture f					JOIN Tournament t ON t.idTournament = f.idTournament					JOIN LeagueTournament lt ON lt.idTournament = t.idTournament AND lt.IdLeague = 3					WHERE CURRENT_TIMESTAMP >= f.DateEnd ORDER BY f.DateEnd DESC LIMIT 1)				UNION					(SELECT lt.IdLeague, f.idFixture, f.csys_birth, f.csys_deleted, f.csys_modified, f.csys_revision FROM Fixture f					JOIN Tournament t ON t.idTournament = f.idTournament					JOIN LeagueTournament lt ON lt.idTournament = t.idTournament AND lt.IdLeague = 4					WHERE CURRENT_DATE <= f.DateStart ORDER BY f.DateStart ASC LIMIT 4)				UNION					(SELECT lt.IdLeague, f.idFixture, f.csys_birth, f.csys_deleted, f.csys_modified, f.csys_revision FROM Fixture f					JOIN Tournament t ON t.idTournament = f.idTournament					JOIN LeagueTournament lt ON lt.idTournament = t.idTournament AND lt.IdLeague = 4					WHERE CURRENT_TIMESTAMP >= f.DateEnd ORDER BY f.DateEnd DESC LIMIT 1);				-->				<Attribute Alias="idMode" Direction="Output">IdLeague</Attribute>				<Attribute Alias="idFixture" Direction="Output">idFixture</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idMode">IdLeague</Attribute>					<Attribute Alias="idFixture">idFixture</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="idMode">IdLeague</Attribute>				</Filter>			</Filters>		</Entity>		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="Fixture">FixtureView</Name>			<Data>				<!-- 				ALTER TABLE `igolespro`.`Fixture` 				ADD COLUMN `csys_birth` DATETIME NULL AFTER `fixtureType`,				ADD COLUMN `csys_modified` DATETIME NULL AFTER `csys_birth`,				ADD COLUMN `csys_deleted` DATETIME NULL AFTER `csys_modified`,				ADD COLUMN `csys_revision` INT NULL AFTER `csys_deleted`,				ADD COLUMN `csys_syncronized` CHAR NULL AFTER `csys_revision`;				CREATE VIEW FixtureView AS SELECT f.idFixture, f.idTournament, f.DateStart, f.DateEnd, f. Number, ft.Description AS name, f.fixtureType, f.csys_birth, f.csys_modified, csys_deleted, csys_revision FROM Fixture f JOIN FixtureTitle ft ON f.idFixture = ft.idFixture AND ft.LanguageCode = 0;								-->				<!-- Fixture -->				<Attribute Alias="idFixture" Direction="Output">idFixture</Attribute>				<Attribute Alias="idTournament" Direction="Output">idTournament</Attribute>				<Attribute Alias="dateStart" Direction="Output">DateStart</Attribute>				<Attribute Alias="dateEnd" Direction="Output">DateEnd</Attribute>				<Attribute Alias="number" Direction="Output">Number</Attribute>				<Attribute Alias="fixtureType" Direction="Output">fixtureType</Attribute>								<!-- FixtureTitle -->				<Attribute Alias="name" Direction="Output">name</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idFixture">idFixture</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="modified">csys_modified</Attribute>				</Filter>				<Filter>					<Attribute Alias="idTournament">idTournament</Attribute>				</Filter>				<Filter>					<Attribute Alias="dateStart">DateStart</Attribute>				</Filter>				<Filter>					<Attribute Alias="dateEnd">DateEnd</Attribute>				</Filter>			</Filters>		</Entity>		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="LeagueTournament">LeagueTournamentView</Name>			<Data>				<!--				ALTER TABLE `igolespro`.`LeagueTournament` 				ADD COLUMN `csys_birth` DATETIME NULL AFTER `idLeague`,				ADD COLUMN `csys_modified` DATETIME NULL AFTER `csys_birth`,				ADD COLUMN `csys_deleted` DATETIME NULL AFTER `csys_modified`,				ADD COLUMN `csys_revision` INT NULL DEFAULT 0 AFTER `csys_deleted`,				ADD COLUMN `csys_syncronized` CHAR NULL AFTER `csys_revision`;				CREATE VIEW LeagueTournamentView AS SELECT * FROM LeagueTournament;				-->				<!-- Classification -->				<Attribute Alias="idLeagueTournament" Direction="Output">idLeagueTournament</Attribute>				<Attribute Alias="idTournament" Direction="Output">idTournament</Attribute>				<Attribute Alias="idLeague" Direction="Output">IdLeague</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idLeagueTournament">idLeagueTournament</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="modified">csys_modified</Attribute>				</Filter>				<Filter>					<Attribute Alias="idTournament">idTournament</Attribute>				</Filter>				<Filter>					<Attribute Alias="idLeague">IdLeague</Attribute>				</Filter>			</Filters>		</Entity>		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="Match">MatchView</Name>			<Data>				<!-- Match -->				<Attribute Alias="idTeamLocal" Direction="Output">idTeamLocal</Attribute>				<Attribute Alias="idTeamVisitor" Direction="Output">idTeamVisitor</Attribute>				<Attribute Alias="idFixture" Direction="Output">idFixture</Attribute>				<Attribute Alias="dateMatch" Direction="Output">DateMatch</Attribute>				<Attribute Alias="dateMatchNotConfirmed" Direction="Output">DateMatchNotConfirmed</Attribute>				<Attribute Alias="scoreLocal" Direction="Output">ScoreLocal</Attribute>				<Attribute Alias="scoreVisitor" Direction="Output">ScoreVisitor</Attribute>				<Attribute Alias="matchType" Direction="Output">matchType</Attribute>								<!-- MatchExtension -->				<Attribute Alias="scoreTeamLocalPenalties" Direction="Output">ScoreTeamLocalPenalties</Attribute>				<Attribute Alias="scoreTeamVisitorPenalties" Direction="Output">ScoreTeamVisitorPenalties</Attribute>				<Attribute Alias="dateFinal" Direction="Output">DateFinal</Attribute>				<Attribute Alias="matchState" Direction="Output">matchState</Attribute>				<Attribute Alias="idMatchOffer" Direction="Output">idMatchOffer</Attribute>				<Attribute Alias="idPreviousMatch" Direction="Output">idPreviousMatch</Attribute>				<!-- Para el cálculo de la hora de referencia -->				<Attribute Alias="dateStartOvertime" Direction="Output">DateStartOvertime</Attribute>				<Attribute Alias="dateStart2Half" Direction="Output">DateStart2Half</Attribute>				<Attribute Alias="dateStart" Direction="Output">DateStart</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idMatch">idMatch</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="idFixture">idFixture</Attribute>				</Filter>				<Filter>					<Attribute Alias="modified">csys_modified</Attribute>				</Filter>				<Filter>					<Attribute Alias="idTeamLocal">idTeamLocal</Attribute>					<Attribute Alias="idTeamVisitor">idTeamVisitor</Attribute>				</Filter>			</Filters>		</Entity>		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="EventOfMatch">EventOfMatchView</Name>			<Data>				<!-- EventOfMatch -->				<Attribute Alias="idEventOfMatch" Direction="Output">idEventOfMatch</Attribute>				<Attribute Alias="idMatch" Direction="Output">idMatch</Attribute>				<Attribute Alias="idEvent" Direction="Output">idEvent</Attribute>				<Attribute Alias="dateIn" Direction="Output">dateIn</Attribute>				<Attribute Alias="minuteOfMatch" Direction="Output">MinuteOfMatch</Attribute>				<Attribute Alias="status" Direction="Output">Status</Attribute>				<Attribute Alias="idPeriod" Direction="Output">idPeriod</Attribute>				<Attribute Alias="idTeam" Direction="Output">IdTeamOfEvent</Attribute>				<Attribute Alias="localScore" Direction="Output">ScoreLocal</Attribute>				<Attribute Alias="visitorScore" Direction="Output">ScoreVisitor</Attribute>				<Attribute Alias="actorTransmitterName" Direction="Output">ActorTransmitterName</Attribute>				<Attribute Alias="actorInTransmitterName" Direction="Output">ActorInTransmitterName</Attribute>				<Attribute Alias="actorReceptorName" Direction="Output">ActorReceptorName</Attribute>				<Attribute Alias="comments" Direction="Output">Comments</Attribute>				<Attribute Alias="urlGoalFilm" Direction="Output">urlGoalFilm</Attribute>				<Attribute Alias="isOwnGoal" Direction="Output">isOwnGoal</Attribute>				<Attribute Alias="isPenaltyGoal" Direction="Output">isPenaltyGoal</Attribute>				<Attribute Alias="isPenaltyMissedAtStick" Direction="Output">isPenaltyMissedAtStick</Attribute>				<Attribute Alias="isPenaltyMissedOut" Direction="Output">isPenaltyMissedOut</Attribute>				<Attribute Alias="isPenaltyMissedStopped" Direction="Output">isPenaltyMissedStopped</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idEventOfMatch">idEventOfMatch</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="idMatch">idMatch</Attribute>				</Filter>				<Filter>					<Attribute Alias="modified">csys_modified</Attribute>				</Filter>			</Filters>		</Entity>		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="false" MaxPageSize="1000">			<Name Alias="Team">Team</Name>			<Data>				<!-- Team -->				<Attribute Alias="idTeam" Direction="Output">idTeam</Attribute>				<Attribute Alias="name" Direction="Output">Name</Attribute>				<Attribute Alias="nameShort" Direction="Output">NameShort</Attribute>				<Attribute Alias="nameTiny" Direction="Output">NameTiny</Attribute>				<Attribute Alias="urlImage" Direction="Output">URLImage</Attribute>				<Attribute Alias="idMode" Direction="Output">idLeague</Attribute>				<Attribute Alias="isNationalTeam" Direction="Output">isNationalTeam</Attribute>				<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idTeam">idTeam</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="idTeam">idTeam</Attribute>				</Filter>			</Filters>		</Entity>		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="Tournament">TournamentView</Name>			<Data>				<!--				ALTER TABLE `igolespro`.`Tournament` 				ADD COLUMN `csys_birth` DATETIME NULL AFTER `OrderBy`,				ADD COLUMN `csys_modified` DATETIME NULL AFTER `csys_birth`,				ADD COLUMN `csys_deleted` DATETIME NULL AFTER `csys_modified`,				ADD COLUMN `csys_revision` INT NULL AFTER `csys_deleted`,				ADD COLUMN `csys_syncronized` CHAR NULL AFTER `csys_revision`;				CREATE VIEW TournamentView AS SELECT t.idTournament, t.YearTournament, t.Status, t.DateStart, t.DateEnd, t.imageName, t.isLeague, tt.Description AS name, t.OrderBy, t.csys_birth, t.csys_modified, t.csys_deleted, t.csys_revision FROM Tournament t JOIN TournamentTitle tt ON t.idTournament = tt.idTournament AND tt.LanguageCode=0;				-->				<!-- Classification -->				<Attribute Alias="idTournament" Direction="Output">idTournament</Attribute>				<Attribute Alias="yearTournament" Direction="Output">YearTournament</Attribute>				<Attribute Alias="status" Direction="Output">Status</Attribute>				<Attribute Alias="dateStart" Direction="Output">DateStart</Attribute>				<Attribute Alias="dateEnd" Direction="Output">DateEnd</Attribute>				<Attribute Alias="imageName" Direction="Output">imageName</Attribute>				<Attribute Alias="isLeague" Direction="Output">isLeague</Attribute>				<Attribute Alias="name" Direction="Output">name</Attribute>				<Attribute Alias="orderBy" Direction="Output">OrderBy</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idTournament">idTournament</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="modified">csys_modified</Attribute>				</Filter>				<Filter>					<Attribute Alias="idTournament">idTournament</Attribute>				</Filter>			</Filters>		</Entity>		<Entity AllowedOperations="Retrieve" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">			<Name Alias="Classification">ClassificationView</Name>			<Data>				<!--				ALTER TABLE `igolespro`.`Classification` 				ADD COLUMN `csys_birth` DATETIME NULL AFTER `weight`,				ADD COLUMN `csys_modified` DATETIME NULL AFTER `csys_birth`,				ADD COLUMN `csys_deleted` DATETIME NULL AFTER `csys_modified`,				ADD COLUMN `csys_revision` INT NULL AFTER `csys_deleted`,				ADD COLUMN `csys_syncronized` CHAR NULL AFTER `csys_revision`;				CREATE VIEW ClassificationView AS SELECT * FROM Classification;				-->				<!-- Classification -->				<Attribute Alias="idTournament" Direction="Output">idTournament</Attribute>				<Attribute Alias="idTeam" Direction="Output">idTeam</Attribute>				<Attribute Alias="pjl" Direction="Output">pjl</Attribute>				<Attribute Alias="pgl" Direction="Output">pgl</Attribute>				<Attribute Alias="ppl" Direction="Output">ppl</Attribute>				<Attribute Alias="pel" Direction="Output">pel</Attribute>				<Attribute Alias="gfl" Direction="Output">gfl</Attribute>				<Attribute Alias="gcl" Direction="Output">gcl</Attribute>				<Attribute Alias="pjv" Direction="Output">pjv</Attribute>				<Attribute Alias="pgv" Direction="Output">pgv</Attribute>				<Attribute Alias="ppv" Direction="Output">ppv</Attribute>				<Attribute Alias="pev" Direction="Output">pev</Attribute>				<Attribute Alias="gfv" Direction="Output">gfv</Attribute>				<Attribute Alias="gcv" Direction="Output">gcv</Attribute>				<Attribute Alias="points" Direction="Output">points</Attribute>				<Attribute Alias="weight" Direction="Output">weight</Attribute>								<!-- Información de auditoría -->								<Attribute Alias="revision" Direction="Output">csys_revision</Attribute>				<Attribute Alias="birth" Direction="Output">csys_birth</Attribute>				<Attribute Alias="modified" Direction="Output">csys_modified</Attribute>				<Attribute Alias="deleted" Direction="Output">csys_deleted</Attribute>			</Data>			<Keys>				<Key>					<Attribute Alias="idTournament">idTournament</Attribute>				</Key>				<Key>					<Attribute Alias="idTeam">idTeam</Attribute>				</Key>			</Keys>			<Filters>				<Filter>					<Attribute Alias="modified">csys_modified</Attribute>				</Filter>				<Filter>					<Attribute Alias="idTournament">idTournament</Attribute>				</Filter>			</Filters>		</Entity>	</Entities></AccessPolicy>