<?xml version="1.0" encoding="UTF-8"?>
<AccessPolicy Version="1.0.0" Description="Políticas de acceso a las entidades de la aplicación Golesmessenger">
	<Entities Name="Entidades Base">
		<Entity AllowedOperations="Retrieve Update" OnlyByKey="true" OnlySpecifiedFilters="true" MaxPageSize="100">
			<Name Alias="Player">Player</Name>
			<Data>
				<Attribute Alias="UserName" Direction="Both">UserName</Attribute>
				<Attribute Alias="EMail" Direction="Both">EMail</Attribute>
				<Attribute Alias="anonymousUser" Direction="Output">anonymousUser</Attribute>
			</Data>
			<Keys>
				<Key>
					<Attribute Alias="idPlayer">idPlayer</Attribute>
				</Key>
			</Keys>
			<Filters>
				<Filter>
					<Attribute Alias="idPlayer">idPlayer</Attribute>
				</Filter>
				<Filter>
					<Attribute Alias="UserName">UserName</Attribute>
				</Filter>
				<Filter>
					<Attribute Alias="Mobile">Mobile</Attribute>
					<Attribute Alias="Linked">Linked</Attribute>
				</Filter>
			</Filters>
		</Entity>
		<Entity AllowedOperations="Retrieve" OnlyByKey="true" OnlySpecifiedFilters="true" MaxPageSize="100">
			<Name Alias="Match">Matches</Name>
			<Data>
				<Attribute Alias="idTeamLocal" Direction="Output">idTeamLocal</Attribute>
				<Attribute Alias="idTeamVisitor" Direction="Output">idTeamVisitor</Attribute>
				<Attribute Alias="idFixture" Direction="Output">idFixture</Attribute>
				<Attribute Alias="DateMatch" Direction="Output">DateMatch</Attribute>
				<Attribute Alias="ScoreLocal" Direction="Output">ScoreLocal</Attribute>
				<Attribute Alias="ScoreVisitor" Direction="Output">ScoreVisitor</Attribute>
				<Attribute Alias="matchType" Direction="Output">matchType</Attribute>
			</Data>
			<Keys>
				<Key>
					<Attribute Alias="idMatch">idMatch</Attribute>
				</Key>
			</Keys>
			<Filters>
				<Filter>
					<Attribute Alias="idFixture">idFixture</Attribute>
				</Filter>
				<Filter>
					<Attribute Alias="idTeamLocal">idTeamLocal</Attribute>
				</Filter>
				<Filter>
					<Attribute Alias="idTeamVisitor">idTeamVisitor</Attribute>
				</Filter>
			</Filters>
		</Entity>
	</Entities>
</AccessPolicy>
