<?xml version="1.0" encoding="UTF-8"?>
<AccessPolicy Version="1.0.0" Description="Políticas de acceso a las entidades de la aplicación Shooter">
    <Entities Name="Entidades Base">
        <Entity AllowedOperations="Retrieve Create Delete" Hooks="Follow" incommingAlwaysWins="true" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">
            <Name Alias="Follow">Follow</Name>
            <Data>
                <!-- Follow -->
                <Attribute Alias="idUser" Direction="Both" Description="User identifier. Person who follow to">idUser</Attribute>
                <Attribute Alias="idFollowedUser" Direction="Both" Description="User identifier. Person who is followed">idUserFollowed</Attribute>
                <!-- Información de auditoría -->
                <Attribute Alias="revision" Direction="Both" Description="It's initialized by 0 to the creation. Must be increased by 1 in each modification ">csys_revision</Attribute>
                <Attribute Alias="birth" Direction="Both" Description="It's initialized by current_time to the creation. Only should be modified in the return backend updates">csys_birth</Attribute>
                <Attribute Alias="modified" Direction="Both" Description="It's initialized by current_time to the creation. Must be updated at each modification or in the return backend updates">csys_modified</Attribute>
                <Attribute Alias="deleted" Direction="Both" Description="It's initialized by null to the creation. Must be updated at current_time when is marked as deleted when is not yet synchronized">csys_deleted</Attribute>
            </Data>

            <Keys>
                <Key>
                    <Attribute Alias="idUser">idUser</Attribute>
                    <Attribute Alias="idFollowedUser">idUserFollowed</Attribute>
                </Key>
            </Keys>

            <Filters>
                <Filter>
                    <!--  -->
                    <Attribute Alias="idUser">idUser</Attribute>
                    <Attribute Alias="idFollowedUser">idUserFollowed</Attribute>
                    <Attribute Alias="modified">csys_modified</Attribute>
                    <Attribute Alias="deleted">csys_deleted</Attribute>
                </Filter>
                <Filter>
                    <!-- -->
                    <Attribute Alias="idUser">idUser</Attribute>
                    <Attribute Alias="idFollowedUser">idUserFollowed</Attribute>
                </Filter>
            </Filters>
            <Ordination>
                <Attribute Alias="modified" Order="Descending">csys_modified</Attribute>
            </Ordination>
        </Entity>
    </Entities>
</AccessPolicy>