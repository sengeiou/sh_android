<?xml version="1.0" encoding="UTF-8"?>
<AccessPolicy Version="1.0.0" Description="Políticas de acceso a las entidades de la aplicación Shooter">
    <Entities Name="Entidades Base">
        <Entity AllowedOperations="Retrieve UpdateCreate" Hooks="CreateDevice" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">
            <Name Alias="Device">Device</Name>
            <Data>
                <!-- Follow -->
                <Attribute Alias="idDevice" Direction="Output" Description="Device identifier">idDevice</Attribute>
                <Attribute Alias="idUser" Direction="Both" Description="User identifier.">idUser</Attribute>
                <Attribute Alias="token" Direction="Both" Description="Api platform token">token</Attribute>
                <Attribute Alias="idPushEngine" Direction="Both" Description="Push engine identifier">idPushEngine</Attribute>
                <Attribute Alias="uniqueDeviceID" Direction="Both" Description="Unique Device Identifier">uniqueDeviceID</Attribute>
                <Attribute Alias="platform" Direction="Both" Description="Platform">platform</Attribute>
                <Attribute Alias="model" Direction="Both" Description="Device model">model</Attribute>
                <Attribute Alias="osVer" Direction="Both" Description="OS version">osVer</Attribute>
                <Attribute Alias="locale" Direction="Both" Description="Device locale">locale</Attribute>
                <!-- Información de auditoría -->
                <Attribute Alias="revision" Direction="Both" Description="It's initialized by 0 to the creation. Must be increased by 1 in each modification ">csys_revision</Attribute>
                <Attribute Alias="birth" Direction="Both" Description="It's initialized by current_time to the creation. Only should be modified in the return backend updates">csys_birth</Attribute>
                <Attribute Alias="modified" Direction="Both" Description="It's initialized by current_time to the creation. Must be updated at each modification or in the return backend updates">csys_modified</Attribute>
                <Attribute Alias="deleted" Direction="Both" Description="It's initialized by null to the creation. Must be updated at current_time when is marked as deleted when is not yet synchronized">csys_deleted</Attribute>
            </Data>
            <Keys>
                <Key>
                    <Attribute Alias="idDevice">idDevice</Attribute>
                </Key>
            </Keys>
            <Filters>
                <Filter>
                    <Attribute Alias="idUser">idUser</Attribute>
                </Filter>
                <Filter>
                    <Attribute Alias="idDevice">idDevice</Attribute>
                </Filter>
                <Filter>
                    <Attribute Alias="idDevice">idDevice</Attribute>
                    <Attribute Alias="modified">csys_modified</Attribute>
                    <Attribute Alias="deleted">csys_deleted</Attribute>
                </Filter>
                <Filter>
                    <Attribute Alias="idUser">idUser</Attribute>
                    <Attribute Alias="modified">csys_modified</Attribute>
                    <Attribute Alias="deleted">csys_deleted</Attribute>
                </Filter>
            </Filters>
        </Entity>
    </Entities>
</AccessPolicy>