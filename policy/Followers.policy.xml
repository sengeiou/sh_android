<?xml version="1.0" encoding="UTF-8"?><AccessPolicy Version="1.0.0" Description="Polí­ticas de acceso a las entidades de la aplicación Shooter">    <Entities Name="Entidades Base">        <Entity AllowedOperations="Retrieve" isVirtual="false" OnlyByKey="false" OnlySpecifiedFilters="true" MaxPageSize="1000">            <Name Alias="Followers">FollowersView</Name>            <Data>                <!-- Follow -->                <Attribute Alias="idUser" Direction="Output" Description="User identifier. Person who follow me">idUser</Attribute>                <Attribute Alias="idFavouriteTeam" Direction="Output" Description="Favourite team identifier">idFavouriteTeam</Attribute>                <Attribute Alias="userName" Direction="Output" Description="User nick It is not modifiable">userName</Attribute>                <Attribute Alias="name" Direction="Output" Description="User name. It is modifiable">name</Attribute>                <Attribute Alias="photo" Direction="Output" Description="User photo url">photo</Attribute>                <Attribute Alias="bio" Direction="Output" Description="User's bio">bio</Attribute>                <Attribute Alias="website" Direction="Output" Description="User's website">website</Attribute>                                <Attribute Alias="numFollowings" Direction="Output" Description="User's following number">numFollowings</Attribute>                <Attribute Alias="numFollowers" Direction="Output" Description="User's follower number">numFollowers</Attribute>                <Attribute Alias="points" Direction="Output" Description="User's points">points</Attribute>                <Attribute Alias="rank" Direction="Output" Description="Ranking user's position">rank</Attribute>                <!-- Información de auditoría -->                <Attribute Alias="revision" Direction="Output" Description="It's initialized by 0 to the creation. Must be increased by 1 in each modification ">csys_revision</Attribute>                <Attribute Alias="birth" Direction="Output" Description="It's initialized by current_time to the creation. Only should be modified in the return backend updates">csys_birth</Attribute>                <Attribute Alias="modified" Direction="Output" Description="It's initialized by current_time to the creation. Must be updated at each modification or in the return backend updates">csys_modified</Attribute>                <Attribute Alias="deleted" Direction="Output" Description="It's initialized by null to the creation. Must be updated at current_time when is marked as deleted when is not yet synchronized">csys_deleted</Attribute>            </Data>            <Keys>                <Key>                    <Attribute Alias="idUser">idUser</Attribute> <!-- id user que me sigue. -->                    <Attribute Alias="idUserFollowed">idUserFollowed</Attribute> <!-- Mi id user. -->                </Key>            </Keys>            <Filters>                <Filter>                    <Attribute Alias="idUserFollowed">idUserFollowed</Attribute>                    <Attribute Alias="modified">csys_modified</Attribute>                    <Attribute Alias="deleted">csys_deleted</Attribute>                </Filter>            </Filters>            <Ordination>                <Attribute Alias="modified" Order="Descending">modified</Attribute>            </Ordination>        </Entity>    </Entities></AccessPolicy>